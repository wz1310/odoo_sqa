            <field name="name">Discount Customer: Global rule </field>
            <field name="model_id" ref="sanqua_discount_target_support.model_discount_target_support_customer"/>
            <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
