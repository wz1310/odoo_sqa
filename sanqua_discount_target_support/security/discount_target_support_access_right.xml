            <field name="category_id" ref="module_category_discount_target_and_support_master"/>
        </record>
        <record id="discount_target_support_master_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_discount_target_and_support_master"/>
