<odoo>
    <record model="ir.ui.view" id="view_account_payment_invoice_form">
        <field name="name">View Account Payment Invoice Form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <field name="journal_id" position="after">
                <field name="customer_discount_id" options="{'no_quick_create':True,'no_create':True}"/>
                <field name="remaining_disc_amount"/>
                <field name="settlement_request_id"/>
            </field>
        </field>
    </record>
</odoo>