  <record model="ir.ui.view" id="inherited_view_order_form_acc_move_btn">
    <field name="name">Inherited View Order Form Button Account Move</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='invoice_date']" position="after">
        <field name="pick_method" invisible="1" string="Picking method" widget="selection" readonly="1" force_save="1"/>
        <field name="div_method" invisible="1" string="Divisi" widget="selection" readonly="1" force_save="1"/>
        <field name="call_pick_method" invisible="1" string="Call Picking" readonly="1"/>
      </xpath>
    </field>
  </record>

    <record id="etax_invoice_collection_form_view" model="ir.ui.view">
        <field name="name">etaxs.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="invoice_collection.view_invoice_tree_many2many"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="pick_method" string="Pick Method" widget="selection" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
    <!-- popup untuk custom customer -->
    <record model="ir.ui.view" id="change_post_wizard_form_view">
        <field name="name">Change Post Wizard</field>
        <field name="model">change.post.wizard</field>
        <field name='priority'>10</field>
        <field name="arch" type="xml">
            <form string="Form">
                <header></header>
                <sheet>
                    <group>
                        <field name="change_customer"/>
                        <field name="reason" placeholder="Reason Here" string="Reason"/>
                        <field name="user_post" invisible="1"/>
                        <field name="suffix_action" invisible="1"/>
                        
                    </group>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="confirm" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>
</odoo>