<odoo>
    <record id="etax_invoice_merge_form_view" model="ir.ui.view">
        <field name="name">etax.invoice.merge.form.view</field>
        <field name="model">etax.invoice.merge</field>
        <field name="inherit_id" ref="e_tax_invoice_merge.etax_invoice_merge_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@id='invoice_tab']" position="after">
                <page name="note" string="Note">
                    <field name="commercial_note" string="Note" placeholder="Add a note here"/>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="custom_customer"/>
                    <div class="o_row">
                    <field name="custom_customer" readonly='1' string="Custom customer" force_save="1"/>
                    <button name="open_change_post_wizard" string="Change" type="object" class="oe_inline btn-primary"/></div>
            </xpath>
        </field>
    </record>

  <record model="ir.ui.view" id="inherited_view_order_form_acc_move_com">
    <field name="name">Inherited View Order Form Account Move Commercial</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_invoice_tree" />
    <field name="arch" type="xml">

      <xpath expr="//field[@name='ref']" position="after">
        <field name="invoice_date" optional="show" string="Invoice date"/>
        <field name="pick_method" invisible="0" string="Picking method" widget="selection" readonly="1" force_save="1"/>
        <field name="div_method" invisible="0" string="Divisi" widget="selection" readonly="1" force_save="1"/>
        <field name="call_pick_method" invisible="1" string="Call Picking" readonly="1"/>
      </xpath>
    </field>
  </record>

