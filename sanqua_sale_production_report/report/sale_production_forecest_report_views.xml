<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_production_forecest_report_tree" model="ir.ui.view">
        <field name="name">report.sale.production.forecast.tree</field>
        <field name="model">report.sale.production.forecast</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="date"/>
                <field name="product_id"/>
                <field name="qty_order"/>
                <field name="qty_production"/>
                <field name="qty_forecast"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_production_forecest_report_pivot" model="ir.ui.view">
         <field name="name">report.sale.production.forecast.pivot</field>
         <field name="model">report.sale.production.forecast</field>
         <field name="arch" type="xml">
             <pivot string="Delivery Order" disable_linking="True">
                <field name="date" type="row"/>
                <field name="product_id" type="row"/>
                <field name="qty_order" type="measure"/>
                <field name="qty_production" type="measure"/>
                <field name="qty_forecast" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="sale_production_forecest_report_search" model="ir.ui.view">
        <field name="name">report.sale.production.forecast.view</field>
        <field name="model">report.sale.production.forecast</field>
        <field name="arch" type="xml">
            <search string="Report Delivery Order">
                <field name="product_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_sale_production_forecest_report" model="ir.actions.act_window">
        <field name="name">Sale Production Forecast Report</field>
        <field name="res_model">report.sale.production.forecast</field>
        <field name="view_mode">pivot</field>
    </record>

    <menuitem id="menu_sale_production_forecest_report"
            name="Sale Production Forecest Report"
            action="action_sale_production_forecest_report"
            parent="sale.menu_sale_report"
            sequence="200"/>
</odoo>
