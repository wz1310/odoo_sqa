<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="inheriet_budget_control_list_view" model="ir.ui.view">
        <field name="name">inheriet.budget.control.list.view</field>
        <field name="model">inheriet.budget.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="value" />
                <field name="value2" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="inheriet_budget_control_form_view" model="ir.ui.view">
        <field name="name">inheriet.budget.control.form.view</field>
        <field name="model">inheriet.budget.control</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" />
                        <field name="value"/>
                        <field name="value2" />
                        <field name="description"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_inheriet_budget_control" model="ir.actions.act_window">
        <field name="name">Budget Control</field>
        <field name="res_model">inheriet.budget.control</field>
        <field name="view_mode">tree,form</field>
    </record>

        <record model="ir.ui.view" id="view_account_analytic_account_form_inherit_budgetku">
            <field name="name">crossovered.budget.view.form.inherit.budget.control</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id" ref="om_account_budget.crossovered_budget_view_form"/>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree" position="attributes">
                    <attribute name="decoration-danger">status=='close'</attribute>
                </xpath>
                <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='percentage']" position="after" >
                    <field name="status" widget='selection'/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='practical_amount']" position="after" >
                    <field name="remaining_amount" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='remaining_amount']" position="after" >
                    <field name="remainings_amount"/>
                </xpath>
                <xpath expr="//button[@name='action_budget_confirm']" position="after" >
                    <button name="tes" type="object" class="oe_highlight" string="Closing"/>
                </xpath>
            </field>
        </record>

        <record id="inheriet_budget_control_closing_action_server" model="ir.actions.server">
            <field name="name">Closing Budget</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_crossovered_budget"/>
            <field name="binding_model_id" ref="model_crossovered_budget"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                if records :
                    action = records.tesz()
            </field>
        </record>

    <menuitem id="inheriet_budget_control_root_menu" name="Budget Control" web_icon="inheriet_budget_control,static/description/bc.png"/>
    <menuitem id="inheriet_budget_control_sub_menu" parent="inheriet_budget_control_root_menu"
              name="Budget Control"/>
    <menuitem id="inheriet_budget_control_menu" name="Budget Control"
              action="om_account_budget.act_crossovered_budget_view"
              parent="inheriet_budget_control_sub_menu"/>

</odoo>