<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="credit_note_report_tree" model="ir.ui.view">
        <field name="name">report.credit.note.tree</field>
        <field name="model">report.credit.note</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="partner_code" optional="show"/>
                <field name="partner_id"/>
                <field name="product_code" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="refund_qty" />
                <field name="product_id" optional="hide"/>
                <field name="subtotal"/>
                <field name="invoice_id" optional="hide"/>
                <field name="cn_date"/>
                <field name="cn_number"/>
                <field name='cn_state' optional="show"/>
                <field name="sj_number"/>
                <field name="sales_admin_id" optional="hide"/>
                <field name="division_id" />
                <field name="customer_group_id" optional="hide"/>
                <field name="user_id" optional="hide"/>
                <field name="region_group_id" optional="hide"/>
                <field name="region_master_id" optional="hide"/>
                <field name="region_id" optional="hide"/>
                <field name="company_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="credit_note_report_pivot" model="ir.ui.view">
         <field name="name">report.credit.note.pivot</field>
         <field name="model">report.credit.note</field>
         <field name="arch" type="xml">
             <pivot string="Credit Note Report" disable_linking="True">
                <field name="sales_admin_id" type="row"/>
                <field name="customer_group_id" type="row"/>
                <field name="user_id" type="row"/>
                <field name="region_master_id" type="row"/>
                <field name="region_id" type="row"/>
                <field name="subtotal" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="credit_note_report_search" model="ir.ui.view">
        <field name="name">report.credit.note.view</field>
        <field name="model">report.credit.note</field>
        <field name="arch" type="xml">
            <search string="Credit Note Report">
                <field name="partner_id"/>
                <field name="sales_admin_id"/>
                <field name="customer_group_id"/>
                <field name="user_id"/>
                <field name="region_master_id"/>
                <field name="region_id"/>
            </search>
        </field>
    </record>

    <record id="action_credit_note_report" model="ir.actions.act_window">
        <field name="name">A14 - Laporan Credit Note</field>
        <field name="res_model">report.credit.note</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_credit_note_report"
            name="A14 - Laporan Credit Note"
            action="action_credit_note_report"
            parent="sale.menu_sale_report"
            sequence="124"/>
</odoo>
