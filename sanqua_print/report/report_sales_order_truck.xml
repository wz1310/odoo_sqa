        <t t-foreach="docs" t-as="o">
            <t t-if="o.state not in ['draft','rejected','waiting_approval','refuse','submited']">
                <t t-if="len(o.sequence_sj_ids)">
                    <t t-foreach="o.sequence_sj_ids.mapped('partner_id')" t-as="x">                
                        <t t-call="sanqua_print.report_sales_order_truck_document" t-lang="x.lang"/>
                    </t>
                </t>
                <t t-else="">
                    <t t-call="sanqua_print.report_sales_order_truck_document_false"/>
                </t>
            </t>
        </t>
    </template>

