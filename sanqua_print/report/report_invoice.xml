                        </table>
                    </div>
                </div>
                <div class="footer" style="font-size: 11px;">
                    <div style="float:left;">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="report_invoice_with_payments">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.invoice_user_id.lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                <t t-if="o.type in ('in_invoice')">
                    <t t-call="sanqua_print.report_vendor_bill" t-lang="lang"/>
                </t>
                <t t-if="o.type in ('out_invoice')">
                    <t t-call="sanqua_print.report_customer_invoice" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>

</odoo>
