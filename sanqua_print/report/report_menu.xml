    <!-- Delivery -->
    <record id="stock.action_report_delivery" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>

    <report
        string="Delivery Slip"
        id="action_report_delivery"
        model="stock.picking"
        report_type="qweb-pdf"
        name="sanqua_print.report_deliveryslip"
        file="sanqua_print.report_deliveryslip"
        print_report_name="'Delivery Slip - %s - %s' % (object.partner_id.name or '', object.name)"
        paperformat="sanqau_print_paperformat_a5_deliveryslip"
    />


    <report
        string="Receive Items"
        id="action_receive_items"
        model="stock.picking"
        report_type="qweb-pdf"
