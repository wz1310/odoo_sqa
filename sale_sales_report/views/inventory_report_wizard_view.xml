<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_inventory_location_report_wizard_form" model="ir.ui.view">
        <field name="name">inventory.location.report.wizard.form</field>
        <field name="model">inventory.location.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Inventory Report">
                <sheet>
                    <div class="oe_title">
                        <h1>Inventory Location Report</h1>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                        <group string="Filter">
                            <field name="location_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <p class="text-muted">
                        Pilih bulan, tahun, dan lokasi untuk melihat pergerakan stok.
                    </p>
                </sheet>
                <footer>
                    <button name="action_view_onscreen" string="View Report" type="object" class="btn-primary" icon="fa-desktop"/>
                    <button name="action_print_report" string="Generate PDF" type="object" class="btn-secondary" icon="fa-file-pdf-o"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_inventory_location_report_client" model="ir.actions.client">
    <field name="name">Inventory Move by Location</field>
    <field name="tag">inventory_location_report.client_action</field>
    <field name="context">{'month': '', 'year': '', 'location_ids': []}</field>
</record>

