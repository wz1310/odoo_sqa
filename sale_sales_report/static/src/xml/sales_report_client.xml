<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sale_sales_report.sales_report_client_template" owl="1">
        <div class="o_action">
            <div class="o_content d-flex flex-column h-100" t-on-click="handleMainClick" style="background: #f8fafc;">
                <t t-if="state.loading">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <div class="spinner-border text-primary" role="status"></div>
                        <h5 class="mt-3 text-muted">Memperbarui Laporan...</h5>
                    </div>
                </t>
                <t t-else="">
                    <div class="report_content_area h-100 d-flex flex-column">
                        <t t-out="state.html_content"/>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>