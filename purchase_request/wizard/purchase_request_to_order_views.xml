<odoo>
    <record id="purchase_request_to_order_wizard_form" model="ir.ui.view">
        <field name="name">purchase.request.to.order.view.form</field>
        <field name="model">purchase.request.to.order</field>
        <field name="arch" type="xml">
            <form string="Purchase Request To Order">
                <sheet>
                    <group>
                        <group>
                            <field name="request_id" options="{'no_quick_create':True,'no_create':True}"/>
                            <field name="supplier_id" options="{'no_quick_create':True,'no_create':True}"/>
                        </group>
                    </group>
                    <field name="line_ids" >
                        <tree editable="bottom" create="false">
                            <field name="item_id" options="{'no_quick_create':True,'no_create':True}"/>
                            <field name="qty"/>
                            <field name="qty_released"/>
                            <field name="uom_id"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="btn_confirm" string="Create PO" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>