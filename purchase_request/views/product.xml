<odoo>
    <record model="ir.ui.view" id="product_template_form_with_asset_inherited">
        <field name="name">Product Template form with asset inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="is_asset" />
                <field name="non_asset_type" attrs="{'invisible':[('is_asset','=',True)], 'required':[('is_asset','=',False)]}"/>
                <field name="product_classification"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="product_product_form_with_asset_inherited">
        <field name="name">Product product form with asset inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="before">
                <field name="is_asset" />
                <field name="non_asset_type" attrs="{'invisible':[('is_asset','=',True)], 'required':[('is_asset','=',False)]}"/>
                <field name="product_classification"/>
            </field>
        </field>
    </record>
</odoo>