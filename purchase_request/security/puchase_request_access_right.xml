<odoo>
    <data noupdate="0">

        <record model="ir.rule" id="rule_purchase_request_global_user">
            <field name="name">Rule  Global User</field>
            <field name="model_id" ref="model_purchase_request" />
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
        </record>
        
        <record model="ir.rule" id="purchase_request_rule_public_user">
            <field name="name">Purchase Request: Manage by Own-Company</field>
            <field name="model_id" ref="purchase_request.model_purchase_request"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record model="ir.rule" id="purchase_request_rule_internal_user">
            <field name="name">Purchase Request: Manage by Own-PR</field>
            <field name="model_id" ref="purchase_request.model_purchase_request"/>
            <field name="domain_force">['|',('user_id', '=', user.id),('message_partner_ids', 'in', [user.partner_id.id])]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record model="ir.rule" id="rule_pr_access_all">
            <field name="name">Rule All PR</field>
            <field name="model_id" ref="model_purchase_request" />
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]" />
        </record>


        <!-- access menu purchase -->
        <record model="ir.ui.menu" id="purchase.menu_purchase_root">
            <field name="groups_id" eval="[(4,ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>