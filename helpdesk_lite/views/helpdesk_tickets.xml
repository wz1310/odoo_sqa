<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_form_view" model="ir.ui.view">
        <field name="name">helpdesk_lite.ticket.form.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <form duplicate="false">
                <header>
                    <button string="Take" type="object" name="takeit" class="btn btn-outline-primary btn-lg" attrs="{'invisible': [('user_id', '!=', False),('cek_mgr','!=', True)]}"/>
                    <!-- <button string="Takes" type="object" name="notiff"/> -->
                    <!-- <button string="SEND EMAIL" type="object" name="action_send_email"/> -->
                    <!--<button string="Delegate" type="object" name="delegate" readonly="1"/>-->
                    <field name="stage_id" widget="statusbar" clickable="1"
                           options="{'fold_field': 'fold'}" attrs="{'readonly': [('cek_assign', '!=', True)]}"/>
                </header>
                <sheet string="Ticket">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="helpdesk_lite.group_helpdesk_lite_manager"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="kanban_state" class="oe_inline" widget="kanban_state_selection"/>
                    <h1>
                        <field name="code" readonly="1"/>
                    </h1>
                    <div class="oe_title">
                        <h1>
                            <field name="name" invisible="1"/>
                            <field name="subject_id" required="1" options="{'no_open': True}" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_create" invisible="True"/>
                            <field name="cek_mgr" invisible="1"/>
                            <field name="cek_assign" invisible="1"/>
                            <field name="category_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('cek_assign', '!=', True)]}" />
                            <field name="sub_category_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('cek_assign', '!=', True)]}" />
                            <field name="partner_id" widget="many2one"
                                   context="{'default_name': contact_name, 'default_email': email_from}"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                            <!-- <field name="contact_name" attrs="{'invisible': [('partner_id', '=', False)]}"/> -->
                            <field name="company_id" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                            <field name="department" />
                            <field name="contact_name" invisible="1"/>
                            <field name="email_from" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                            <field name="user_id" attrs="{'readonly': [('cek_mgr', '=', False)]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"/>
                            <field name="team_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}" attrs="{'readonly': [('cek_assign', '!=', True)]}"/>
                        </group>
                        <group>
                            <field name="priority" groups="base.group_user" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                            <field name="create_date" string="Created" attrs="{'readonly': [('cek_mgr', '=', False)]}"/>
                            <field name="start_date" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                            <field name="date_deadline" attrs="{'readonly': [('cek_assign', '!=', True)]}"/>
                            <field name="date_done" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add problem description..." groups="base.group_user" attrs="{'readonly': [('cek_mgr', '!=', True)]}"/>
                        </page>
                        <page string="Repair details">
                            <field name="explain" placeholder="Add detail..." groups="base.group_user" attrs="{'readonly': [('cek_assign', '!=', True)]}"/>
                        </page>
                        <page string="Extra Info" name="extra_info" invisible="True">
                            <group>
                                <group>
                                    <field name="id" groups="base.group_no_one"/>
                                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                                </group>
                                <group>
                                    <field name="legend_blocked" invisible="1"/>
                                    <field name="legend_done" invisible="1"/>
                                    <field name="legend_normal" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_tree_view" model="ir.ui.view">
        <field name="name">helpdesk_lite.ticket.tree.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <tree string="Issue Tracker Tree" decoration-bf="message_needaction==True">
                <field name="message_needaction" invisible="1"/>
                <field name="id" invisible='True'/>
                <field name="code"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="description"/>
                <field name="partner_id"/>
                <field name="category_id" string="Category"/>
                <field name="sub_category_id" string="Sub Category"/>
                <field name="priority" string="Priority"/>
                <field name="user_id"/>
                <field name="create_date" string="Create date"/>
                <field name="start_date"/>
                <field name="date_deadline"/>
                <field name="date_done"/>
                <field name="explain"/>
                <field name="stage_id" widget="selection" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_filter" model="ir.ui.view">
        <field name="name">helpdesk_lite.ticket.search.view</field>
        <field name="model">helpdesk_lite.ticket</field>
        <field name="arch" type="xml">
            <search string="Ticket Search">
                <field name="name" string="Ticket" filter_domain="['|', '|', '|', ('partner_id','child_of',self), ('description','ilike',self),('email_from','ilike',self),('name','ilike',self)]"/>
                <field name="id"/>
                <field name="partner_id" operator="child_of"/>
                <field name="company_id" />
                <field name="department" />
                <field name="user_id"/>
                <field name="stage_id" domain="[]"/>
                <filter string="My Tickets" name="my_tickets" domain="['|',('user_id','=',uid),('user_id','=',False)]"/>
                <filter string="Unassigned" name="unassigned" domain="[('user_id', '=', False)]"/>
                <separator/>
                <filter string="New" name="draft" domain="[('stage_id.sequence', '=', 1)]"/>
                <separator/>
                <filter string="Unread Messages" name="message_needaction" domain="[('message_needaction','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By" >
                    <filter string="Partner" name="partner" context="{'group_by':'commercial_partner_id'}" />
                    <filter string="Assigned to" name="responsible" context="{'group_by':'user_id'}" />
                    <filter string="Priority" name="priority" context="{'group_by':'priority'}" />
                    <filter string="Stage" name="stage" context="{'group_by':'stage_id'}"/>
                    <filter string="Company" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                    <separator/>
                    <filter string="Create Day" name="create" context="{'group_by':'create_date:day'}" help="Create Date"/>
                </group>
            </search>
        </field>
    </record>

