<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="helpdesk_category_tree" model="ir.ui.view">
        <field name="name">helpdesk_lite.category.tree</field>
        <field name="model">helpdesk_lite.category</field>
        <field name="arch" type="xml">
            <tree string="Category" editable="bottom">
                <field name="id" optional="hide"/>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="helpdesk_category_action" model="ir.actions.act_window">
        <field name="name">Category</field>
        <field name="res_model">helpdesk_lite.category</field>
        <field name="view_id" ref="helpdesk_lite.helpdesk_category_tree"/>
    </record>

    <menuitem
            id="menu_helpdesk_category_act"
            name="Category"
            sequence="27"
            action="helpdesk_category_action"
            parent="menu_config"
            groups="base.group_no_one"/>

</odoo>
