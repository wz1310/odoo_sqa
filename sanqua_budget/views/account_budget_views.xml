<odoo>
    <record id="crossovered_budget_view_form_inherit" model="ir.ui.view">
        <field name="name">crossovered.budget.form.view.inherit</field>
        <field name="model">crossovered.budget</field>
        <field name="inherit_id" ref="account_budget.crossovered_budget_view_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="asset_id"/>
            </field>
            <xpath expr="//notebook/page/field[@name='crossovered_budget_line']/tree/field[@name='theoritical_amount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="other_info" string="Other Info">
                    <field name="purchase_ids">
                        <tree>
                            <field name="name" string="Purchase Order"/>
                            <field name="invoice_ids" widget="many2many_tags" string="Vendor Bill"/>
                            <field name="partner_id" string="Partner"/>
                            <field name="amount_total" String="Amount"/>
                            <field name="state" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>