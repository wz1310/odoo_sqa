<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='date_order']" position="after">
        		<field name="sale_agreement_id" readonly="1"/>
                <field name="product_ids" invisible="1"/>
        	</xpath>
            <xpath expr="//field[@name='order_line']/form/group/group/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), ('id', 'in', parent.product_ids)]</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                <attribute name="domain">[('sale_ok', '=', True), ('id', 'in', parent.product_ids)]</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="agreement_line_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>