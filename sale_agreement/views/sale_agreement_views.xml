<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_agreement_search" model="ir.ui.view">
        <field name="name">Sale Agreement Search</field>
        <field name="model">sale.agreement</field>
        <field name="priority">11</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" string="Doc./Customer" filter_domain="['|',('name','ilike',self),('partner_id','ilike',self)]" />
                <!-- BELOW IS FILTER -->
                <filter name="filter_draft" domain="[('state','=','draft')]" string="Draft" />
                <filter name="filter_need_approval" domain="[('state','=','confirm')]" string="Confirm/Need Approval" />
                <filter name="filter_approved" domain="[('state','=','approve')]" string="Approved" />
                <filter name="filter_done" domain="[('state','=','done')]" string="Done" />
                <separator/>
                <!-- GROUP BY -->
                <filter name="group_by_company" context="{'group_by':'company_id'}" string="Company" domain="[]"/>
                <filter name="group_by_partner_id" context="{'group_by':'partner_id'}" string="Customer" domain="[]"/>
                <filter name="group_by_team_id" context="{'group_by':'team_id'}" string="Division" domain="[]"/>
                <filter name="group_by_user_id" context="{'group_by':'user_id'}" string="Salesperson" domain="[]"/>
                <filter name="group_by_state" context="{'group_by':'state'}" string="State" domain="[]"/>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_sale_agreement_list">
        <field name="name">Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('sale_agreement_id','=',active_id)]</field>
        <field name="context">{"default_sale_agreement_id":active_id}</field>
    </record>

    <record id="sale_agreement_tree_view" model="ir.ui.view">
        <field name="name">sale.agreement.tree.view</field>
        <field name="model">sale.agreement</field>
        <field name="arch" type="xml">
        	<tree string="Sale Agreement" decoration-danger="current_date > end_date">
                <field name="name"/>
                <field name="partner_code"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="team_id"/>
                <field name="amount_total"/>
                <field name="total_product_qty"/>
                <field name="total_release_qty"/>
                <field name="total_remaining_qty"/>
                <field name="state"/>
                <field name="create_uid"/>
                <field name="company_id" groups="base.group_multi_company" optional="show" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="sale_agreement_form_view" model="ir.ui.view">
        <field name="name">sale.agreement.form.view</field>
        <field name="model">sale.agreement</field>
        <field name="arch" type="xml">
            <form string="Sale Agreement">
                <header>
                    <button name="btn_confirm" states="draft" type="object" string="Confirm" class="btn-primary"/>
                    <button name="action_draft" states="cancel" type="object" string="Set to Draft"/>
                    <button name="action_approve" type="object" string="Approve" states="confirm" class="btn-primary" groups="sales_team.group_sale_manager"/>
                    <button name="create_so_from_sale_agreement" states="approve" type="object" string="Create Sale Order" class="btn-primary"/>
                    <button name="action_done" states="approve" type="object" string="Set Done" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="Cancel" states="draft,confirm"/>
                    <button name="cancel_approved" type="object" string="Cancel Approved" states="approve" groups="sales_team.group_sale_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm,approve" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_sale_agreement_list)d" type="action" class="oe_stat_button" icon="fa-list-alt"
                            attrs="{'invisible': [('order_count','>=',1),('state', 'not in', ['approve'])]}">
                            <field name="order_count" widget="statinfo" string="Sale Orders"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id" required="1" attrs="{'readonly': [('state', 'in', ['confirm', 'approve'])]}" options="{'no_create':1}"/>
                            <field name="partner_id" domain="[('is_company','=',True)]" required="1" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}" attrs="{'readonly': [('state', 'in', ['confirm', 'approve'])]}" options="{'no_create': True}" force_save="1"/>
                            <field name="partner_code" readonly="1"/>
                            <field name="user_id" readonly="1" force_save="1" domain="[('sale_team_id','=', team_id)]" options="{'no_create': True}" />
                            <field name="region_group_id" force_save="1" options="{'no_create':1}"/>

                            
                            <field name="supervisor_id" options="{'no_create':1}" readonly="1" force_save="1"/>
                            <field name="sales_admin_id"/>
                            <field name="partner_pricelist_id" invisible="1"/>
                            <field name="pricelist_id" readonly="1" force_save="1"/>
                            
                            
                        </group>
                        <group>
                            <field name="start_date"  attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="end_date"  attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                            <field name="periode_information" attrs="{'invisible': [('state', 'not in', ['confirm', 'approve'])]}"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1" force_save="1" options="{'no_create':1}"/>
                            
                            <field name="currency_id" invisible="1" options="{'no_create':1}"/>
                        </group> 
                    </group>
                    <notebook>
                        <page string="Agreement Lines" name="agreement_lines">
                            <field name="agreement_line_ids" mode="tree,kanban" attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                                <form>
                                    <group>
                                        <field name="product_id" domain="[('id','not in',parent.selected_product_ids),('categ_id','in', parent.product_category_ids)]"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom"  groups="uom.group_uom"/>
                                        <field name="product_qty_sale_order"/>
                                        <field name="remaining_qty"/>
                                        <field name="price_unit"/>
                                        <field name="tax_ids"/>
                                    </group>
                                </form>
                                <tree editable="bottom" decoration-danger="price_unit&lt;=100.0 or product_qty&lt;=1.0">
                                    <field name="product_id" domain="[('id','not in',parent.selected_product_ids),('categ_id','in', parent.product_category_ids)]" options="{'no_create':1}"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom_category_id" invisible="1" options="{'no_create':1}"/>
                                    <field name="product_uom" groups="uom.group_uom" options="{'no_create':1}"/>
                                    <field name="product_qty_sale_order" attrs="{'column_invisible':[('parent.state','=','draft')]}"/>
                                    <field name="remaining_qty" attrs="{'column_invisible':[('parent.state','=','draft')]}"/>
                                    <field name="price_unit" force_save="1" readonly="1"/>

                                    <field name="tax_ids" widget="many2many_tags" options="{'no_create': True}" context="{'search_view_ref': 'account.account_tax_view_search'}" domain="[('type_tax_use','=','sale')]"/>
                                    <!--field name="disc_amount" attrs="{'readonly': [('discount_id', '!=', False)]}" force_save="1"/-->
                                    <field name="disc_amount" attrs="" force_save="1"/>
                                    <field name="discount" invisible="1"/>
                                    <field name="discount_id" force_save="1" groups="base.group_system"/>
                                    <field name="price_subtotal" />
                                    <field name="price_total" />
                                </tree>
                                <kanban class="o_kanban_mobile">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                    <field name="product_uom"/>
                                    <templates>
                                    	<t t-name="kanban-box">
                                            <div class="row">
                                                <strong>
                                                    <span>
                                                        <t t-esc="record.product_id.value"/>
                                                    </span>
                                                </strong>
                                            </div>
                                            <div class="row">
                                                <strong>
                                                    <span class="float-right text-right">
                                                        <t t-esc="record.product_qty.value"/>
                                                        <t t-esc="record.product_uom.value"/>
                                                    </span>
                                                </strong>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
        					</field>
                            <button name="action_add_all_product" string="Add All Product" type="object" class="btn-primary" attrs="{'invisible':[('state','!=','draft')]}"/>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total"  nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
        				</page>
                        <page string="Technical" groups="base.group_system">
                            <group>
                                <group>
                                    <field name="selected_product_ids" widget="many2many_tags"/>
                                    <field name="product_category_ids" invisible="1" force_save="1" options="{'no_create':1}"/>
                                    <field name="product_ids" invisible="1" options="{'no_create':1}"/>
                                    <field name="currency_id" invisible="1" options="{'no_create':1}"/>
                                    
                                    <field name="total_order" invisible="1"/>
                                    <field name="pricelist_id" groups="base.group_system" force_save="1" />
                                </group>
                            </group>
                        </page>
        			</notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_sale_agreement" model="ir.actions.act_window">
        <field name="name">Sale Agreements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.agreement</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="sale_agreement_tree_view"/>
    </record>

    <menuitem
        id="menu_sale_agreement"
        name="Sale Agreements"
        parent="sale.sale_order_menu"
        action="action_sale_agreement"
        sequence="1" groups="sales_team.group_sale_salesman"/>

    <menuitem
        id="sale.menu_sale_quotations"
        action="sale.action_quotations_with_onboarding"
        parent="sale.sale_order_menu"
        sequence="2" groups="sales_team.group_sale_salesman"/>

    <menuitem id="sale.menu_sale_order"
            action="sale.action_orders"
            parent="sale.sale_order_menu"
            sequence="3" groups="sales_team.group_sale_salesman"/>

    <menuitem id="sale.report_sales_team"
            parent="sale.sale_order_menu"
            groups="sales_team.group_sale_manager"
            action="sales_team.crm_team_salesteams_act"
            sequence="4"/>
</odoo>