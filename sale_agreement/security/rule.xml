<odoo>
    
	<!-- SALE AGREEMENT -->
	<record model="ir.rule" id="rule_sale_agreement_global_user">
		<field name="name">Rule Sale Agreement Global User</field>
		<field name="model_id" ref="model_sale_agreement" />
		<field name="perm_read" eval="True" />
		<field name="perm_create" eval="True" />
		<field name="perm_write" eval="True" />
		<field name="perm_unlink" eval="True" />
		<field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
	</record>
	<!-- END OF SALE AGREEMENT -->

    <record model="ir.rule" id="rule_sale_agreement_own">
        <field name="name">Rule Sale Agreement Own</field>
        <field name="model_id" ref="model_sale_agreement" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
        <!-- created or own team -->
        <field name="domain_force">['|', ('create_uid','=',user.id), ('team_id','=',user.sale_team_id.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
    </record>
    <record model="ir.rule" id="rule_sale_agreement_follower">
        <field name="name">Rule Sale Agreement Followers</field>
        <field name="model_id" ref="model_sale_agreement" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('base.group_user'))]" />
    </record>

    <record model="ir.rule" id="rule_all_sale_agreement">
        <field name="name">Rule All Sale Agreement</field>
        <field name="model_id" ref="model_sale_agreement" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="True" />
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]" />
    </record>
</odoo>