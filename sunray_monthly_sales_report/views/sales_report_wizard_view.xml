<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sunray_monthly_sales_report_wizard_form" model="ir.ui.view">
        <field name="name">sunray.monthly.sales.report.wizard.form</field>
        <field name="model">sunray.monthly.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Monthly Sales Report">
                <sheet>
                    <div class="oe_title">
                        <h1>Monthly Sales Report</h1>
                    </div>
                    <group>
                        <group string="Period">
                            <field name="month"/>
                            <field name="year"/>
                        </group>
                        <group string="Filter">
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <p class="text-muted">
                        Select the month, year, and salespersons to generate the report. Leave Salespersons empty to include all.
                    </p>
                </sheet>
                <footer>
                    <button name="action_view_onscreen" string="View Report" type="object" class="btn-primary" icon="fa-desktop"/>
                    <button name="action_print_report" string="Generate PDF" type="object" class="btn-secondary" icon="fa-file-pdf-o"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sunray_monthly_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Monthly Sales by Salesperson</field>
        <field name="res_model">sunray.monthly.sales.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sunray_monthly_sales_report_wizard"
              name="Monthly Sales by Salesperson"
              parent="sale.menu_sale_report"
              action="action_sunray_monthly_sales_client_report"
              sequence="20"/>
</odoo>
