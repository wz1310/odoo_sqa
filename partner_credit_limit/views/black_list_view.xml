<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_black_list_form" model="ir.ui.view">
        <field name="name">view.black.list.form</field>
        <field name="model">black.list</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Klaim">
                <header>
                </header>
                <sheet>
                	<div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
		                <field name="min"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
   
   <record id="view_black_list_tree" model="ir.ui.view">
        <field name="name">view.black.list.tree</field>
        <field name="model">black.list</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <tree string="Klaim">
		    	<field name="min"/>
            </tree>
        </field>
    </record>

	<record id="window_black_list_view" model="ir.actions.act_window">
	    <field name="name">Config Black List</field>
	    <field name="res_model">black.list</field>
	    <field name="view_mode">tree,form</field>
	    <field name="usage">menu</field>
	    <field name="context">{'search_default_dashboard':1}</field>
	    <field name="limit">1</field>
	    <field name="help" type="html">
	        <p>
	        </p>
	    </field>
	</record>
	
	<record id="action_tree_blacklist_transaction" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_black_list_tree"/>
        <field name="act_window_id" ref="window_black_list_view"/>
    </record>
	
	<menuitem id="sub_menu_black_list" name="Black List" parent="contacts.res_partner_menu_config" sequence="3" action="window_black_list_view"/>
</odoo>