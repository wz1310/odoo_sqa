<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="limit_credit_report_tree" model="ir.ui.view">
        <field name="name">report.limit.credit.tree</field>
        <field name="model">report.limit.credit</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="partner_id"/>
                <field name="partner_code"/>
                <field name="user_id"/>
                <field name="sales_admin_id"/>
                <field name="payment_term_id"/>
                <field name="credit_limit_value"/>
                <field name="amount_total"/>
                <field name="amount_surat_jalan"/>
                <field name="amount_residual"/>
                <field name="total"/>
                <field name="spare"/>
                <field name="tags"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="limit_credit_report_pivot" model="ir.ui.view">
         <field name="name">report.limit.credit.pivot</field>
         <field name="model">report.limit.credit</field>
         <field name="arch" type="xml">
             <pivot string="Limit Credit" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="sales_admin_id" type="col"/>
                <field name="credit_limit_value" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="limit_credit_report_search" model="ir.ui.view">
        <field name="name">report.limit.credit.view</field>
        <field name="model">report.limit.credit</field>
        <field name="arch" type="xml">
            <search string="Report Limit Credit">
                <field name="partner_id"/>
                <field name="sales_admin_id"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>

    <record id="action_limit_credit_report" model="ir.actions.act_window">
        <field name="name">A9 - Limit Credit Report</field>
        <field name="res_model">report.limit.credit</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_limit_credit_report"
            name="A9 - Limit Credit Report"
            action="action_limit_credit_report"
            parent="sale.menu_sale_report"
            sequence="119"/>
</odoo>
