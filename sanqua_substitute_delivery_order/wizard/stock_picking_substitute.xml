<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_substitute_view_form" model="ir.ui.view">
        <field name="name">stock.picking.substitute.view.form</field>
        <field name="model">stock.picking.substitute</field>
        <field name="arch" type="xml">
            <form string="Stock Picking Substitute">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id" readonly="1"/>
                            <field name="move_ids" invisible="1"/>
                            <field name="product_ids" invisible="1"/>
                        </group>
                    </group>
                    <field name="line_ids" >
                        <tree editable="bottom">
                            <field name="substitute_id" options="{'no_create':True}" invisible="1"/>
                            <field name="move_id" options="{'no_create':True}" domain="[('id', 'in', parent.move_ids)]" context="{'is_substitute':True}"/>
                            <field name="product_id" options="{'no_create':True}" required="1" domain="[('sale_ok', '=', True), ('id', 'in', parent.product_ids)]"/>
                            <field name="qty"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="btn_confirm" string="Confirm" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>