<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order1.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']" position="after">
                <group>
                    <field name="is_substitute_order" attrs="{'invisible':[('is_substitute_order','=',False)]}" readonly="1"/>
                    <field name="substitute_order_id" attrs="{'invisible':[('substitute_order_id','=',False)]}" readonly="1"/>
                    <field name="substitute_with_order_id" attrs="{'invisible':[('substitute_with_order_id','=',False)]}" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>