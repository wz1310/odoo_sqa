<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="harga_rata_customer_report_tree" model="ir.ui.view">
        <field name="name">report.harga.rata.customer.tree</field>
        <field name="model">report.harga.rata.customer</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="id" string="Nomor"/>
                <field name="order_date"/>
                <field name="partner_code" optional="show"/>
                <field name="partner_name" optional="show"/>
                <field name="partner_id" optional="hide"/>
                <field name="customer_group_id"/>
                <field name="order_pickup_method_id"/>
                <field name="ref_product" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="product_id" optional="hide"/>
                <field name="qty"/>
                <field name="price_total"/>
                <field name="discount_amount"/>
                <field name="harga_rata"/>
                <field name="potongan_as"/>
                <field name="potongan_ba"/>
                <field name="potongan_diskon_target"/>
                <field name="harga_rata_bersih"/>
                <field name="harga_ambil_sendiri"/>
                <field name="harga_kirim"/>
            </tree>
        </field>
    </record>

    <record id="harga_rata_customer_report_pivot" model="ir.ui.view">
         <field name="name">report.harga.rata.customer.pivot</field>
         <field name="model">report.harga.rata.customer</field>
         <field name="arch" type="xml">
             <pivot string="Customer Average Cost" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="sale_id" type="row"/>
                <field name="order_date" type="row"/>
                <field name="ref_product" type="row"/>
                <field name="product_id" type="row"/>
                <field name="qty" type="measure"/>
                <field name="price_total" type="measure"/>
                <field name="discount_amount" type="measure"/>
                <field name="harga_rata" type="measure"/>
                <field name="potongan_ba" type="measure"/>
                <field name="potongan_diskon_target" type="measure"/>
                <field name="harga_rata_bersih" type="measure"/>
                <field name="harga_ambil_sendiri" type="measure"/>
                <field name="harga_kirim" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="harga_rata_customer_report_search" model="ir.ui.view">
        <field name="name">report.harga.rata.customer.view</field>
        <field name="model">report.harga.rata.customer</field>
        <field name="arch" type="xml">
            <search string="Report Customer Average Cost">
                <field name="partner_id"/>
                <field name="customer_group_id"/>
                <field name="order_pickup_method_id"/>
                <field name="product_id"/>
            </search>
        </field>
    </record>

    <record id="action_harga_rata_customer_report" model="ir.actions.act_window">
        <field name="name">A5 - Customer Average Cost Report</field>
        <field name="res_model">report.harga.rata.customer</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_harga_rata_customer_report"
            name="A5 - Customer Average Cost Report"
            action="action_harga_rata_customer_report"
            parent="sale.menu_sale_report" sequence="115"/>
</odoo>
