<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_stock_color" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.stock.color</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list" position="attributes">
                <attribute name="decoration-danger">virtual_available_at_date &lt; product_uom_qty</attribute>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/list/field[@name='product_uom_qty']" position="after">
                <field name="virtual_available_at_date" column_invisible="True"/>
            </xpath>
        </field>
    </record>
</odoo>