<odoo>
    <record id="view_product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.view.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='stock_property']" position="after">
                <group string="Minimum Stock Quantity Warning" name="minimum_stock_qty_warning" groups="purchase.group_purchase_manager">
                    <field name="safety_qty"/>
                    <field name="qty_not_safe" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="search_product_inherit" model="ir.ui.view">
        <field name="name">search.product.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='consumable']" position="after">
                <filter string="Under Minimum Qty" name="under_minimum" domain="[('qty_not_safe', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>