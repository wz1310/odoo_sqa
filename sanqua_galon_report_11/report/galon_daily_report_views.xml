    <record id="galon_daily_report_search" model="ir.ui.view">
        <field name="name">report.galon.daily.view</field>
        <field name="model">report.galon.daily</field>
        <field name="arch" type="xml">
            <search string="Galon Daily Report">
                <field name="date_done"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="partner_code"/>
                <field name="partner_name"/>
