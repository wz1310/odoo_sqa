<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="sanqua_purchase_outstanding_return_report_form_inheriteds">
        <field name="name">Purchase Order Return Report Inherit</field>
        <field name="model">wizard.purchase.order.return.report</field>
        <field name="inherit_id" ref="sanqua_purchase_outstanding_report.return_purchase_order_report_wizard_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="whs" options="{'no_open': True, 'no_create': True}"
                                domain="[('company_id', '=', company_id)]"/>
            </xpath>
        </field>
    </record>

</odoo>
