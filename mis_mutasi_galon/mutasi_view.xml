        <record id="adjust_mutasi_form_view" model="ir.ui.view">
            <field name="name">adjust.mutasi.form.view</field>
            <field name="model">adjust.mutasi.request</field>
            <field name="arch" type="xml">
                <form string="Adjust Mutasi Request" >
                <header>
                      <field name="state" widget="statusbar"/>
                      <button name="submit_" string="Submit" type="object" class="btn btn-primary"
                        attrs="{'invisible': [('state', 'in', ('wait','approved','rejected'))]}"/>
                      <button name="approved_" string="Approve" type="object" class="btn btn-primary"
                        attrs="{'invisible': ['|',('user_can_approve','=',False),('state', 'not in', ('wait'))]}"/>
