<odoo>
  <data>

    <record model="ir.ui.view" id="mis_inher_picking_mutasi_galon">
        <field name="name">Mutasi Galon MIS</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">                
                <button name="open_mutasi" class="oe_stat_button" icon="fa-arrows-v" type="object"
                    attrs="{'invisible': [('state', '!=', 'done')]}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Mutasi Galon</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

        <record id="mutasi_form_view" model="ir.ui.view">
            <field name="name">mutasi.form.view</field>
            <field name="model">mutasi.request</field>
            <field name="arch" type="xml">
                <form string="Mutasi Request" >
                <header>
                      <field name="state_mutasi" widget="statusbar"/>
                      <button name="submit_" string="Submit" type="object" class="btn btn-primary"
                        attrs="{'invisible': [('state_mutasi', 'in', ('wait','approved','rejected'))]}"/>
                      <button name="approved_" string="Approve" type="object" class="btn btn-primary"
                        attrs="{'invisible': ['|',('user_can_approve','=',False),('state_mutasi', 'not in', ('wait'))]}"/>
                      <button name="rejected_" string="Reject" type="object" class="btn btn-primary"
                        attrs="{'invisible': [('state_mutasi', 'not in', ('wait','approved'))]}"
                        groups="mis_mutasi_galon.group_acess_reject_mutasi"/>
                      <button name="draft_" string="Set to draft" type="object" class="btn btn-primary" attrs="{'invisible': [('state_mutasi', 'not in', ('rejected'))]}"/>
                </header>
                    <sheet string="Mutasi Request">
                        <group>
                            <group>
                                <field name="name" string="No.Mutasi"/>
                                <field name="done_qty" string="Done Qty"/>
                                <field name="lot_id" string="No. Lot" invisible="0"/>
                                <field name="no_sj" string="No.SJ"/>
                                <field name="partner_id" string="Customer"/>
                                <field name="company_id" invisible="0"/>
                                <!-- <field name="gln_kosong"/> -->
                            </group>
                            <group>
                                <field name="gln_sqa" string="Galon Sanqua"/>
                                <field name="gln_lain" string="Galon lain"/>
                                <field name="gln_rusak" string="Galon Rusak"/>
                                <field name="qty_pinjam" string="Quantity Pinjam"/>
                                <field name="qty_deposit" string="Quantity Deposit"/>
                                <!-- <field name="qty_switch"/> -->
                            </group>
                        </group>
                        <!-- <group>
                            <field name="reject_note"></field>
                        </group> -->
                        <notebook>
                            <page id="page_note" string="Note">
                                <field name="note"/>
                            </page>
                            <page id="page_approval" string="Approvals">
                            <field name="user_can_approve" invisible="1"/>
                            <field name="approval_ids" readonly="1"/>
                            <group><field name="approved" groups="base.group_system"/></group>

                            <button string="Fetch Matrix" type="object" name="checking_approval_matrix" class="oe_highlight" groups="base.group_system" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="mutasi_request_tree_view" model="ir.ui.view">
            <field name="name">mutasi.request.tree.view</field>
            <field name="model">mutasi.request</field>
            <field name="arch" type="xml">
                <tree string="Mutasi Galon">
                    <field name="name"/>
                    <field name="no_sj"/>
                    <field name="gln_sqa"/>
                    <field name="gln_lain"/>
                    <field name="gln_rusak"/>
                    <field name="qty_pinjam"/>
                    <field name="qty_deposit"/>
                    <field name="state_mutasi"/>
                    <!-- <field name="qty_switch"/> -->
                    <field name="company_id" invisible="0"/>          
                </tree>
            </field>
        </record>
        
        <record id='mutasi_request_action' model='ir.actions.act_window'>
            <field name="name">Mutasi Galon Request</field>
            <field name="res_model">mutasi.request</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="mutasi_request_tree_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Mutasi Galon Request
                </p>    
            </field>
        </record>
        
        <menuitem id="menu_mutasi_request_action"
            name="Mutasi Galon Request"
            parent="stock.menu_stock_inventory_control"
            action="mutasi_request_action"
            sequence="112"
            groups="base.group_user"/>

