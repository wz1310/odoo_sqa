                    <field name="partner_id" string="Customer" readonly="1" invisible="0" attrs="{'readonly': [('state_mutasi', 'in', ('wait','approved','rejected'))]}"/>
                    <field name="done_qty" string="Done Qty" readonly="1"/>
                    <field name="lot_id" string="No. Lot" readonly="1" invisible="0"/>
