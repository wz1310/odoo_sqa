                                <!-- <field name="qty_switch"  string="Quantity Switch" attrs="{'readonly': [('state_mutasi', 'in', ('approved'))]}"/> -->
                                <field name="qty_deposit" string="Quantity Deposit"  attrs="{'readonly': [('state_mutasi', 'in', ('approved'))]}"/>
