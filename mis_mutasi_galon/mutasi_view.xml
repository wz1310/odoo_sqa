                        attrs="{'invisible': [('state', 'not in', ('wait','approved'))]}"
                        groups="mis_mutasi_galon.group_acess_reject_mutasi" />
                      <button name="draft_" string="Set to draft" type="object" class="btn btn-primary" invisible="1"/>
                </header>
                    <sheet string="Adjust Mutasi Request">
                        <h1><field name="name" no_label="1" readonly="1" force_save="1"/></h1>
                        <group>
                            <group>
                                <field name="date" string="Tanggal Adjustment" readonly="1" force_save="1"/>
                                <field options="{'no_create': True, 'no_open': True}" name="id_mts_customer" string="No.Mutasi Customer" required="1" attrs="{'readonly': [('state', 'in', ('approved','rejected'))]}"/>
                                <!-- <field name="done_qty" string="Done Qty"/> -->
                                <field name="lot_id" string="No. Lot" invisible="1"/>
                                <!-- <field name="no_sj" string="No.SJ"/> -->
                                <!-- <field name="partner_id" string="Customer"/> -->
                                <!-- <field name="gln_kosong"/> -->
                            </group>
                            <group>
                            <table style="width:100%">
                            <tr class="table-secondary" style="text-align:center;">
                                <th style="width:14%">Saldo Awal :
                                <field name="sum_s_awal" string="Saldo Awal" readonly="1" force_save="1"/>
                                </th>
                                <th style="width:14%">Deposit :
                                <field name="sum_deposit" string="Deposit" readonly="1" force_save="1"/>
                                </th>
                                <th style="width:14%">Qty Pinjam :
                                <field name="sum_qty_pinjam" string="Qty Pinjam" readonly="1" force_save="1"/>
                                </th>
