<odoo>
    <record id="region_discount_view_form" model="ir.ui.view">
        <field name="name">region.discount.view.form</field>
        <field name="model">region.discount</field>
        <field name="arch" type="xml">
            <form string="Region Discount">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="region_group_id"/>
                            <field name="team_id" domain="[('state', '=', 'done')]"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="region_discount_product" string="Product">
                            <field name="region_discount_product_ids" context="{'default_team_id': team_id}">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="disc_amount"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="team_id" invisible="1" />
                                            <field name="allowed_product_category_ids" invisible="1" />
                                            <field name="product_id" domain="[('categ_id','in',allowed_product_category_ids)]" />
                                            <field name="disc_amount"  />
                                            <field name="company_id" invisible="1" />
                                            <field name="currency_id" invisible="1" />
                                        </group>
                                    </sheet>
                                    
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="region_discount_view_tree" model="ir.ui.view">
        <field name="name">region.discount.view.tree</field>
        <field name="model">region.discount</field>
        <field name="arch" type="xml">
            <tree string="Region Discount">
                <field name="name"/>
                <field name="team_id"/>
                <field name="region_group_id"/>
            </tree>
        </field>
    </record>

    <record id="region_discount_action" model="ir.actions.act_window">
        <field name="name">Discount on Region</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">region.discount</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new discount on region.
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_region_discount"
        name="Discount on Region"
        action="region_discount_action"
        parent="sale.menu_sales_config"/>
</odoo>