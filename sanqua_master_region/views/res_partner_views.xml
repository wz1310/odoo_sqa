<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
        	<field name="category_id" position="after">
                <field name="region_group_id" attrs="{'required':[('customer','=',True)]}" options="{'no_quick_create':True,'no_create':True}"/>
                <field name="region_master_id" attrs="{'required':[('customer','=',True)]}" options="{'no_quick_create':True,'no_create':True}"/>
                <field name="region_id" domain="[('region_group_ids','in',region_group_id)]" options="{'no_quick_create':True,'no_create':True}"/>
            </field>
        </field>
    </record>
</odoo>