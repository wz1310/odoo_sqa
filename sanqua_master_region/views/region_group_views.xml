<odoo>
    <record id="region_group_view_form" model="ir.ui.view">
        <field name="name">region.group.view.form</field>
        <field name="model">region.group</field>
        <field name="arch" type="xml">
            <form string="Region Group">
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="region_ids" widget="many2many_tags" />
                            <field name="company_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="region_group_view_tree" model="ir.ui.view">
        <field name="name">region.group.view.tree</field>
        <field name="model">region.group</field>
        <field name="arch" type="xml">
            <tree string="Region Group">
                <field name="code"/>
                <field name="name"/>
                <field name="region_ids" widget="many2many_tags"/>
                <field name="description"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="region_group_action" model="ir.actions.act_window">
        <field name="name">Region Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">region.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new region group.
            </p>
        </field>
    </record>
    
    <menuitem
        id="menu_region_group"
        name="Region Group"
        action="region_group_action"
        parent="wilayah_menu"/>
</odoo>