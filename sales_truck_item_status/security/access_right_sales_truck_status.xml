<odoo>
    <record model="ir.module.category" id="module_sale_truck_item_status">
        <field name="name">Sale Truck Item Status</field>
        <field name="parent_id" ref="base.module_category_sales"/>
    </record>

    <record id="group_sale_truck_item_status_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_sale_truck_item_status"/>
    </record>

    <data noupdate="0">
        <record model="ir.rule" id="rule_sale_truck_item_status_group_sale_truck_item_status_manager_allowed">
            <field name="name">Sale Truck Item Status</field>
            <field name="model_id" ref="sales_truck_item_status.model_sale_truck_item_status"/>
            <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
            <field name="groups" eval="[(4, ref('sales_truck_item_status.group_sale_truck_item_status_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>