<odoo>
    <record model="ir.ui.view" id="sale_truck_dispenser_status_tree_view">
        <field name="name">Sale Truck Dispenser Status Tree</field>
        <field name="model">sale.truck.dispenser.status</field>
        <field name='priority'>10</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="partner_id"  invisible="0"/>
                <field name="partner_code" />
                <field name="partner_name" />
                <field name="brand"/>
                <field name="new_brand" optional="show"/>
                <field name="serial_number"/>
                <field name="new_serial_number" optional="show"/>
                <field name="qty" optional="show"/>
                <field name="deliver_date"/>
                <field name="condition"/>
                <field name="type_of_lease"/>
                <field name="return_date"/>
                <field name="picking_id" optional="show"/>
                <field name="company_id" optional="show"/>
                <field name="rental_price_to_vendor" optional="show"/>
                <field name="rental_price_to_customer" optional="show"/>
                <field name="vendor_ids" optional="show" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

