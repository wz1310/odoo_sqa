<odoo>

    <record model="ir.ui.view" id="sale_truck_item_status_partner_report_tree_view">
        <field name="name">Sale Truck Item Status Partner Report Tree</field>
        <field name="model">sale.truck.item.status.partner.report</field>
        <field name='priority'>10</field>
        <field name="arch" type="xml">
            <tree string="Tree">
                <field name="delivery_date"/>
                <field name="partner_id" optional="hide"/>
                <field name="product_id"/>
                <field name="sale_truck_id"/>
                <field name="picking_id"/>
                <field name="borrow_qty" sum="borrow_qty"/>
                <field name="returned_qty" sum="returned_qty"/>
                <field name="changed_qty" sum="changed_qty"/>
                <field name="deposito_qty" sum="deposito_qty"/>
                <field name="replaced_qty" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="sale_truck_item_status_partner_report_pivot" model="ir.ui.view">
        <field name="name">Sale Truck Item Status Partner Report.pivot</field>
        <field name="model">sale.truck.item.status.partner.report</field>
        <field name="arch" type="xml">
            <pivot string="Pivot" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="product_id" type="col"/>
            </pivot>
        </field>
    </record>
    

    <record id="sale_truck_item_status_partner_report_search" model="ir.ui.view">
        <field name="name">Sale Truck Item Status Partner Report Search</field>
        <field name="model">sale.truck.item.status.partner.report</field>
        <field name="priority">11</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="partner_id" />
                <field name="product_id"/>
                <!-- BELOW IS FILTER -->
                
                <separator/>
                <!-- GROUP BY -->
                <filter name="group_by_partner" context="{'group_by':'partner_id'}" string="Customer" domain="[]"/>
                <filter name="group_by_product_id" context="{'group_by':'product_id'}" string="Product" domain="[]"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sale_truck_item_status_partner_report">
        <field name="name">Stock Card Customer</field>
        <field name="res_model">sale.truck.item.status.partner.report</field>
        <!-- IF ODOO Version <= 12.0 REQUIRE view_type (UNCOMMENT THIS) -->
        <!-- <field name="view_type">form</field> -->
        <field name='view_mode'>tree,pivot</field>
        <!-- <field name='view_id' ref='ref_view_id'/> -->
        <!-- <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('module.kanban_ref_id'), 'sequence':1}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('module.tree_ref_id'), 'sequence':2}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('module.form_ref_id'), 'sequence':3})
                ]"/> -->
    </record>
    <menuitem action="action_sale_truck_item_status_partner_report" id="sale_truck_item_status_partner_report_menu" name="Stock Card Galon" sequence="108" parent="sanqua_galon_report_1.menu_galon_report" />
</odoo>