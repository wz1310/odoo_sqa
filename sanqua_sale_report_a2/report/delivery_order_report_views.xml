<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_order_report_tree" model="ir.ui.view">
        <field name="name">report.delivery.order.tree</field>
        <field name="model">report.delivery.order</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="sale_id"/>
                <field name="date"/>
                <field name="picking_id"/>
                <field name="lot_ids" widget="many2many_tags"/>
                <field name="plant_id"/>
                <field name="partner_code"/>
                <field name="partner_name"/>
                <field name="partner_id" optional="hide"/>
                <!-- <field name="sales_ref"/> -->
                <field name="user_id"/>
                <field name="region_group_id"/>
                <field name="customer_group_id"/>
                <field name="order_pickup_method_id"/>
                <field name="vehicle_model_id"/>
                <field name="fleet_vehicle_id"/>
                <field name="driver_id"/>
                <field name="partner_tujuan_id" optional="hide"/>
                <field name="destination_address"/>
                <field name="product_id" optional="hide"/>
                <field name="product_code"/>
                <field name="product_name"/>
                <field name="quantity_done"/>
                <field name="state"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="delivery_order_report_pivot" model="ir.ui.view">
         <field name="name">report.delivery.order.pivot</field>
         <field name="model">report.delivery.order</field>
         <field name="arch" type="xml">
             <pivot string="Delivery Order" disable_linking="True">
                <field name="plant_id" type="row"/>
                <field name="display_name" type="row"/>
                <field name="order_pickup_method_id" type="row"/>
                <field name="partner_tujuan_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="quantity_done" type="measure"/>
                <field name="state"/>
             </pivot>
         </field>
    </record>

    <record id="delivery_order_report_search" model="ir.ui.view">
        <field name="name">report.delivery.order.view</field>
        <field name="model">report.delivery.order</field>
        <field name="arch" type="xml">
            <search string="Report Delivery Order">
                <field name="picking_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="region_group_id"/>
            </search>
        </field>
    </record>

    <record id="action_delivery_order_report" model="ir.actions.act_window">
        <field name="name">A2 - Delivery Order Report</field>
        <field name="res_model">report.delivery.order</field>
        <field name="view_mode">tree,pivot</field>
    </record>
    
    <record model="ir.ui.view" id="plant_summary_customer_report_pivot_new">
        <field name="name">report.delivery.order.pivot.new</field>
        <field name="model">report.delivery.order</field>
        <field name="arch" type="xml">
            <pivot string="Sales Analysis" disable_linking="True">
                <field name="plant_id" type="row"/>
                <field name="warehouse_plant_id" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="product_id" type="row"/>
                <field name="date" interval="day" type="col"/>
                <field name="quantity_done" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_plant_summary_customer_report_new" model="ir.actions.act_window">
        <field name="name">A26 - Plant Summary Customer Report</field>
        <field name="res_model">report.delivery.order</field>
        <field name="view_mode">pivot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="plant_summary_customer_report_pivot_new"/>
        <field name="domain">[('date','!=', False)]</field>
        <field name="context">{'search_default_current_month':1}</field>
    </record>

    <menuitem id="menu_delivery_order_report"
            name="A2 - Delivery Order Report"
            action="action_delivery_order_report"
            parent="stock.menu_warehouse_report"
            sequence="112"/>
    
    <menuitem id="menu_delivery_order_report"
            name="A2 - Delivery Order Report"
            action="action_delivery_order_report"
            parent="sale.menu_sale_report"
            sequence="112"/>

    <menuitem id="plant_summary_customer_report_menu" 
            name="A26 - Plant Summary Customer Report" 
            action="action_plant_summary_customer_report_new" 
            parent="sale.menu_sale_report" 
            groups="group_plant_summary_customer_report_new" 
            sequence="138" />
</odoo>
