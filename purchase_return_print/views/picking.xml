<odoo>
    <record model="ir.ui.view" id="view_picking_form_inherited">
        <field name="name">View Picking Form Inherited (Purchase Return)</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='extra']/group[last()]" position="after">
                <group string="Purchase Return">
                    <group>
                        <field name="available_vendor_bill_ids" widget="many2many_tags" invisible="1"/>
                        <field name="vendor_bill_to_ref_id" domain="[('id','in',available_vendor_bill_ids)]" options="{'no_quick_create':True,'no_create':True}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>