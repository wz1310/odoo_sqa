<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="raw_material_purchase_order_report_wizard_form_view">
        <field name="name">Wizard Purchase Order Raw Material Report</field>
        <field name="model">wizard.purchase.order.raw.material.report</field>
        <field name='priority'>10</field>
        <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="filter_date" /> -->
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="product_ids" widget="many2many_tags"/>
                            
                            <field name="vendor_ids" widget="many2many_tags" />  
                            <field name="company_id" options="{'no_open': True, 'no_create': True}"/>
                            <!-- <field name="whs" options="{'no_open': True, 'no_create': True}"
                                domain="[('company_id', '=', company_id)]"/> -->
                            <!-- <field name="group_by" /> -->
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Generate Excel" type="object" name="button_print" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_raw_material_purchase_order_report" model="ir.actions.act_window">
        <field name="name">Purchase Order Raw Material Report</field>
        <field name="res_model">wizard.purchase.order.raw.material.report</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="raw_material_purchase_order_report_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="raw_meterial_purchase_order_report_menu" name="Pembelian Bahan Baku" action="action_raw_material_purchase_order_report" parent="purchase.purchase_report" sequence="11"/>

</odoo>
