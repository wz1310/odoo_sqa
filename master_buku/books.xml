        <record id="buku_line_tree_view" model="ir.ui.view">
            <field name="name">buku.line.tree.view</field>
            <field name="model">master.buku.line</field>
            <field name="arch" type="xml">
                <tree string="Chart" editable="bottom">
                    <field name="name"/>
                    <field name="hal"/>
                    <field name="halex"/>
                    <field name="halex1"/>
                    <field name="desc" />
                    <field name="book_move_id"/>    
                </tree>
            </field>
        </record>
        
        <record id='m_buku_action' model='ir.actions.act_window'>
            <field name="name">Buku</field>
            <field name="res_model">master.buku</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="book_tree_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Master Buku
                </p>    
            </field>
        </record>
        
        <record id='buku_line_action' model='ir.actions.act_window'>
            <field name="name">Chart</field>
            <field name="res_model">master.buku.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="buku_line_tree_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Chart Buku
                </p>    
            </field>
        </record>

        <menuitem id="new_book_menu" name="menu_m_book" sequence="1"/>
        
        <menuitem id="menu_buku_action"
            name="Master Buku"
            parent="new_book_menu"
            action="m_buku_action"
            sequence="2"
            groups="base.group_user"/>
        
        <menuitem id="menu_buku_line_action"
