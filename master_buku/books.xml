<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="book_form_view" model="ir.ui.view">
            <field name="name">book.form.view</field>
            <field name="model">master.buku</field>
            <field name="arch" type="xml">
                <form string="Buku" >
                <header>
                      <field name="state" widget="statusbar"/>
                      <button name="submit_" string="Submit" type="object" class="btn btn-primary"
                        attrs="{'invisible': [('state', 'in', ('done'))]}"/>
                      <button name="cancel_" string="Cancel" type="object" class="btn btn-primary" attrs="{'invisible': [('state', 'in', ('draft'))]}"/>
                </header>
                    <sheet string="Master Buku" >
                    <div class="oe_button_box">
                        <button name="_compute_buku_ids_count"
                            class="oe_stat_button"
                            icon="fa-book"
                            type="object">
                            <field name="buku_ids_count" widget="statinfo" string="Chart" options="{'reload_on_button': true}"/>
                        </button>
                    </div>
                        <group attrs="{'readonly': [('state', 'in', ('done'))]}">
                            <group>
                                <field name="name" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="pgr" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="tgl" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                            </group>
                            <group>                                
                                <field name="jn_bk" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="kateg_bk" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field name="desc" attrs="{'readonly': [('state', 'in', ('done'))]}"/>
                                <field string="Tags" name="tags"  widget="many2many_tags" options="{'no_open': False}"  attrs="{'readonly': [('state', 'in', ('done'))]}"/>                       
                            </group>
                        </group>
                        <group > 
                            <field name="book_line" nolabel="1" attrs="{'readonly': [('state', 'in', ('done'))]}">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="hal"/>
                                <field name="halex"/>
                                <field name="halex1"/>
                                <field name="desc"/>
                                <field name="book_move_id" invisible="1"/>
                            </tree>
                            </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="book_tree_view" model="ir.ui.view">
            <field name="name">book.tree.view</field>
            <field name="model">master.buku</field>
            <field name="arch" type="xml">
                <tree string="Book" >
                    <field name="name"/>
                    <field name="pgr"/>
                    <field name="tgl"/>
                    <field name="jn_bk"/>
                    <field name="kateg_bk"/>                   
                    <field name="desc"/>     
                </tree>
            </field>
        </record>

