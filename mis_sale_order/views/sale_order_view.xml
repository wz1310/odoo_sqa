  <record model="ir.ui.view" id="inherited_view_order_form_inv">
    <field name="name">Inherited View Order Form Inv</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
          <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
            <field name="promotion_product_id" invisible='1'/>
            <field name="disc_fix_amount" invisible='1'/>
            <field name="meth_fix_amount" invisible='1'/>
            <field name="promotion_disc_type" invisible='1'/>
            
            <field name="program_promo_id" invisible='1'/>
            <field name="create_date_promo" invisible='1'/>
            <field name="start_date_promo" invisible='1'/>
            <field name="end_date_promo" invisible='1'/>
          </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('cancel'))]}</attribute>
            </xpath>
          <xpath expr="//field[@name='plant_id']" position="after">
            <field name="whs" attrs="{'invisible': [('interco_master', '=', False)]}" domain="[('company_id', '=', plant_id)]"/>
          </xpath>
  <xpath expr="//field[@name='require_payment']" position="after">
    <field name="kode" readonly="1" force_save="1"/>
  </xpath>
