<odoo>
    <record model="ir.module.category" id="module_sale_promotion_order">
        <field name="name">Sale Promotion Order</field>
        <field name="description">Request Product Promotion</field>
        <field name="sequence">82</field>
        <field name="parent_id" eval="False"/>
    </record>

    <record model="res.groups" id="group_sale_order_promotion_approver">
        <field name="name">Sale Order Promotion Approver</field>
        <field name="comment">Sale Order Promotion Approver</field>
        <field name="category_id" ref="module_sale_promotion_order"/>
    </record>

    <record model="res.groups" id="group_sale_order_promotion_user">
        <field name="name">Sale Order Promotion User</field>
        <field name="comment">Sale Order Promotion User</field>
        <field name="category_id" ref="module_sale_promotion_order"/>
        <field name="implied_ids" eval="[(4, ref('sale_promotion.group_sale_order_promotion_approver'))]"/>
    </record>

    <record model="res.groups" id="group_sale_order_promotion_manager">
        <field name="name">Sale Order Promotion Manager</field>
        <field name="comment">Sale Order Promotion Manager</field>
        <field name="category_id" ref="module_sale_promotion_order"/>
        <field name="implied_ids" eval="[(4, ref('sale_promotion.group_sale_order_promotion_user'))]"/>
        <field name="menu_access" eval="[]"/>
    </record>

