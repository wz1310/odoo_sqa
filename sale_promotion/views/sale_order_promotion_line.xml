<?xml version="1.0" encoding="utf-8"?>
<odoo> 
    <record model="ir.ui.view" id="sale_order_promotion_line_tree_view">
        <field name="name">sale.order.promotion.line.tree.view</field>
        <field name="model">sale.order.promotion.line</field>
        <field name="arch" type="xml">
            <tree string="Tree Sale Order Promotion Line">
                <field name="order_id" invisible="1"/>
                <field name="product_id" />
                <field name="product_uom_qty" />
                <field name="product_uom" />
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_promotion_line_form_view">
        <field name="name">sale.order.promotion.line.form.view</field>
        <field name="model">sale.order.promotion.line</field>
        <field name="arch" type="xml">
            <form string="Form Sale Order Promotion Line">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,needapproval,approved"/>
            </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="product_id"/>
                        </h1>
                    </div>
                    <group>
                        <field name="product_uom_qty"/>
                        <field name="product_uom"/>
                    </group>
                </sheet>
                <!--<footer></footer>-->
                
                <!-- UNCOMMENT IF USING Mail Track SYSTEM -->
                <!--<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>-->
            </form>
        </field>
    </record>
</odoo>