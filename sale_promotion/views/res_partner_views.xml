<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="sale_promotion_res_partner_view_form" model="ir.ui.view">
            <field name="name">sale.promotion.res.partner.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <field name="internal_customer" attrs="{'invisible':[('customer','=',False)]}"/>
                </xpath>
                <field name="property_product_pricelist" position="attributes">
                    <attribute name="attrs">{'required':[('internal_customer','=',True)]}</attribute>
                </field>
            </field>
        </record>
	</data>
</odoo>
