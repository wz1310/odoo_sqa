<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="plant_delivery_order_report_tree" model="ir.ui.view">
        <field name="name">plant.delivery.order.report.tree</field>
        <field name="model">plant.delivery.order.report</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="sj_no"/>
                <field name="so_no"/>
                <field name="sj_wim_no"/>

                <field name="fleet_vehicle_id" optional="hide"/>
                <field name="fleet_driver_id" optional="hide"/>
                <!--field name="lot_ids" widget="many2many_tags" optional="hide"/-->

                <field name="so_wim_no"/>
                <field name="po_wim_no"/>
                <field name="contact"/>
                <field name="customer_wim"/>
                <field name="gudang_wim"/>
                <field name="do_date"/>
                <field name="do_receive_date"/>
                <field name="company_id"/>
                <field name="desc_product"/>
                <field name="qty_demand"/>
                <field name="qty_done"/>
                <field name="qty_return"/>
                <field name="qty_net"/>
                <field name="uom_name"/>
                <field name="invoice_no" groups="account.group_account_manager"/>
                <field name="invoice_commercial_no" groups="account.group_account_manager"/>
                <field name="e_tax_invoice_id" groups="account.group_account_manager"/>
                <field name="price_before_tax" groups="account.group_account_manager"/>
            </tree>
        </field>
    </record>
    <record id="plant_delivery_order_report_search" model="ir.ui.view">
        <field name="name">plant.delivery.order.report.search</field>
        <field name="model">plant.delivery.order.report</field>
        <field name="arch" type="xml">
            <search string="Plant Delivery Order Report">
                <field name="location_id"/>
                <field name="sj_no"/>
                <field name="sj_wim_no"/>
                <field name="contact"/>
                <field name="customer_wim"/>
                <field name="so_no"/>
                <field name="so_wim_no"/>
                <field name="so_wim_no"/>
                <field name="invoice_no"/>
                <filter name="destination_location_customer_wim" string="Customer WIM" domain="[('sj_wim_no','=like', 'WIM-SJ/%'),('so_wim_no','=like', 'WIM/SO%')]"></filter>
                <filter name="destination_location_customer_plant" string="Customer Plant" domain="[('partner_id','!=', 7)]"></filter>
            </search>
        </field>
    </record>
    <record id="action_plant_delivery_order_report" model="ir.actions.act_window">
        <field name="name">Laporan Rincian Penjualan Bersih</field>
        <field name="res_model">plant.delivery.order.report</field>
        <field name="view_mode">tree,pivot</field>
    </record>
    <menuitem id="menu_plant_delivery_order_report"
                  name="Plant Delivery Order Report"
                  action="action_plant_delivery_order_report"
                  parent="stock.menu_warehouse_report"
                  sequence="152"/>
</odoo>