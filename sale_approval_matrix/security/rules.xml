<odoo>
    <record model="ir.model.access" id="access_sale_order_base_user">
        <field name="name">sale_order.base_user</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>
    <record model="ir.rule" id="rule_sale_order_follower">
        <field name="name">Rule Slae Order Followers</field>
        <field name="model_id" ref="model_sale_order" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="True" />
        <field name="perm_write" eval="True" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">[('message_partner_ids', 'in', [user.partner_id.id])]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]" />
    </record>
</odoo>