<odoo>
    <record model="ir.ui.view" id="view_order_form">
        <field name="name">View Order Form Inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">


				<button name="open_approvals" type="object" class="oe_stat_button" icon="fa-list-alt" >
					<field name="remaining_approval" widget="statinfo" string="Approvers to go"/>
				</button>
			</xpath>
            
        </field>
    </record>

    <record id="sale_order_form_quote_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_management.sale_order_form_quote"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='optional_products']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>