<odoo>
    <record id="product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/group/group[@name='group_general']" position="after">
                <group name="group_makloon">
                    <field name="makloon"/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="product_template_only_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/group/group[@name='group_general']" position="inside">
                <!-- <group name="group_makloon"> -->
                    <field name="makloon"/>
                <!-- </group> -->
            </xpath>
        </field>
    </record>
</odoo>