             </pivot>
         </field>
    </record> -->

    <record id="m4_report_search" model="ir.ui.view">
        <field name="name">report.m4.view</field>
        <field name="model">report.m4</field>
        <field name="arch" type="xml">
            <search string="M4 Report">
                <field name="partner_id"/>
                <field name="team_id"/>
                <field name="user_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_m4_report" model="ir.actions.act_window">
        <field name="name">M4 Report</field>
        <field name="res_model">report.m4</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_galon_report"
            name="Galon Reporting"
            parent="sale.sale_menu_root"
            sequence="5"/>
            
    <menuitem id="menu_m4_report"
            name="M4 Report"
            action="action_m4_report"
            parent="menu_galon_report"
            sequence="1"/>

</odoo>
