<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="m4_report_tree" model="ir.ui.view">
        <field name="name">report.m4.tree</field>
        <field name="model">report.m4</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="code"/>
                <field name="partner_name"/>
                <field name="partner_id" optional="hide"/>
                <field name="team_id" optional="hide"/>
                <field name="customer_group"/>
                <field name="user_id"/>
                <field name="region_master_id"/>
                <field name="credit_limit"/>
                <field name="target_qty"/>
                <field name="omzet_qty"/>
                <field name="omzet_amount"/>
                <field name="pencapaian"/>
                <field name="payment"/>
                <field name="payment_term_id"/>
                <field name="remaining_limit"/>
                <field name="overlimit_status"/>
                <field name="category_id" widget="many2many_tags"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

