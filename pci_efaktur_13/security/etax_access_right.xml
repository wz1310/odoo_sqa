<odoo>
        <!-- module category E-faktur -->
        <record model="ir.module.category" id="module_category_e_tax">
            <field name="name">E Tax Invoice</field>
        </record>

        <record model="ir.module.category" id="module_category_e_tax_invoice">
            <field name="name">E Tax Invoice</field>
            <field name="parent_id" ref="pci_efaktur_13.module_category_e_tax"/>
        </record>

        <record id="group_e_tax_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_e_tax_invoice"/>
        </record>


        <record model="ir.module.category" id="module_category_e_tax_series">
            <field name="name">Serial</field>
            <field name="parent_id" ref="pci_efaktur_13.module_category_e_tax"/>
        </record>

        <record id="group_e_tax_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_e_tax_series"/>
        </record>
        <function model="res.groups" name="_account_billing_user" />
        
    <data>
        <!-- rule group User -->
        <record model="ir.rule" id="rule_e_tax_invoice_group_user_allowed">
            <field name="name">E-Tax Invoice: Allowed-company only </field>
            <field name="model_id" ref="pci_efaktur_13.model_etax_invoice"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', [x.id for x in user.company_ids])]</field>
            <field name="groups" eval="[(4, ref('pci_efaktur_13.group_e_tax_user'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <!-- rule group Manager -->
        <record model="ir.rule" id="rule_e_tax_invoice_group_manager_allowed">
            <field name="name">E-Tax Invoice: Manage Allowed-company only </field>
            <field name="model_id" ref="pci_efaktur_13.model_etax_invoice"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', [x.id for x in user.company_ids])]</field>
            <field name="groups" eval="[(4, ref('pci_efaktur_13.group_e_tax_manager'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record model="ir.rule" id="rule_e_tax_series_group_manager_allowed">
            <field name="name">E-Tax Invoice Series: Manage Allowed-company only </field>
            <field name="model_id" ref="pci_efaktur_13.model_etax_series"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', [x.id for x in user.company_ids])]</field>
            <field name="groups" eval="[(4, ref('pci_efaktur_13.group_e_tax_manager'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>