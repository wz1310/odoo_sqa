<odoo>
  <data>

    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.view.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.purchase_request_view_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='is_asset']" position="after" >
            <field name="filter_asset" invisible="1"/>
                </xpath>
          <xpath expr="//field[@name='is_asset']" position="attributes">
            <attribute name="attrs">{'readonly': [('filter_asset','=', True)]}</attribute>
            <attribute name="force_save">'True'</attribute>
                </xpath>
          <xpath expr="//field[@name='company_id']" position="after">
            <field name='user_sanqua'></field>
            <field name='no_fpb_sanqua'></field>
                </xpath>

        </field>
      </record>
  </data>
</odoo>