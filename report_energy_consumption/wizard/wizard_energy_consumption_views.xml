<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="energy_consumption_report_wizard_form_view">
        <field name="name">Wizard Energy Consumption Report</field>
        <field name="model">wizard.energy.consumption.report</field>
        <field name='priority'>10</field>
        <field name="arch" type="xml">
            <form string="Form">
                <sheet>
                    <group>
                        <group>
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="kwh_meter" />
                            <field name="kwh_price" />
                            
                            <field name="company_id" options="{'no_open': True, 'no_create': True}" readonly="1" force_save="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Print" type="object" name="button_print" class="oe_highlight" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_energy_consumption_report" model="ir.actions.act_window">
        <field name="name">Energy consumption Report</field>
        <field name="res_model">wizard.energy.consumption.report</field>
        <field name="view_mode">form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="energy_consumption_report_wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="energy_consumption_report_menu" name="Energy Consumption" action="action_energy_consumption_report" parent="mrp.menu_mrp_reporting" sequence="10"/>

</odoo>