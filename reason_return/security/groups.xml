<odoo>
    <record model="ir.module.category" id="module_picking_return_request">
        <field name="name">Return Request</field>
        <field name="description">Return items from customers</field>
        <field name="sequence">81</field>
        <field name="parent_id" eval="False"/>
    </record>

    <record model="res.groups" id="group_picking_return_request_user">
        <field name="name">Picking Return Request User</field>
        <field name="comment">Picking Return Request Manager</field>
        <field name="category_id" ref="module_picking_return_request"/>
    </record>

    <record model="res.groups" id="group_picking_return_request_manager">
        <field name="name">Picking Return Request Manager</field>
        <field name="comment">Picking Return Request Manager</field>
        <field name="category_id" ref="module_picking_return_request"/>
        <field name="implied_ids" eval="[(4, ref('reason_return.group_picking_return_request_user'))]"/>
        <field name="menu_access" eval="[]"/>
    </record>

    <record id="sales_team.group_sale_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">the user will have an access to the sales configuration as well as statistic reports.</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman_all_leads')), (4, ref('reason_return.group_picking_return_request_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

     <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
        <field name="name">User: All Documents</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('reason_return.group_picking_return_request_user'))]"/>
        <field name="comment">the user will have access to all records of everyone in the sales application.</field>
    </record>
</odoo>