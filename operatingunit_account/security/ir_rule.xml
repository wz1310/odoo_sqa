    <!--PINDAH KE ACCOUNT MOVE-->
    <record id="account_journal_per_user" model="ir.rule">
        <field name="name">Journal per user</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('account.group_account_invoice'))]"/>
        <field name="domain_force">[('id', 'in', user.journal_ids.ids)]</field>
    </record>
    <record model="ir.rule" id="account_journal_move_line">
        <field name="name">Transaction Journal per user</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('account.group_account_invoice'))]"/>
        <field name="domain_force">['|', ('journal_id', '=', False), ('journal_id', 'in', user.journal_ids.ids)]</field>
    </record>
    <record model="ir.rule" id="account_journal_move">
        <field name="name">Transaction Journal line per user</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman')), (4, ref('account.group_account_invoice'))]"/>
        <field name="domain_force">[('journal_id', 'in', user.journal_ids.ids)]</field>
    </record>
    <record model="ir.rule" id="stock_warehouse_branch_admin_rule">
        <field name="name">Journal multibranch</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>
</odoo>
