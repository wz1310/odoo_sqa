<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_target_galon_report_tree" model="ir.ui.view">
        <field name="name">report.sales.target.galon.tree</field>
        <field name="model">report.sales.target.galon</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="partner_code"/>
                <field name="partner_name"/>
                <field name="partner_id" optional="hide"/>
                <field name="region_master_id"/>
                <field name="region_id"/>
                <field name="product_id"/>
                <field name="jan"/>
                <field name="feb"/>
                <field name="mar"/>
                <field name="apr"/>
                <field name="mei"/>
                <field name="jun"/>
                <field name="jul"/>
                <field name="ags"/>
                <field name="sept"/>
                <field name="okt"/>
                <field name="nov"/>
                <field name="des"/>
                <field name="total"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="sales_target_galon_report_pivot" model="ir.ui.view">
         <field name="name">report.sales.target.galon.pivot</field>
         <field name="model">report.sales.target.galon</field>
         <field name="arch" type="xml">
             <pivot string="Sales Target Galon Report" disable_linking="True">
                <field name="user_id" type="row"/>
                <field name="team_id" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="region_master_id" type="row"/>
                <field name="region_id" type="row"/>
                <field name="product_id" type="row"/>
             </pivot>
         </field>
    </record>

    <record id="sales_target_galon_report_search" model="ir.ui.view">
        <field name="name">report.sales.target.galon.view</field>
        <field name="model">report.sales.target.galon</field>
        <field name="arch" type="xml">
            <search string="Sales Target Galon Report">
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="partner_id"/>
                <field name="region_master_id"/>
                <field name="region_id"/>
                <field name="product_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_sales_target_galon_report" model="ir.actions.act_window">
        <field name="name">Sales Target Galon Report</field>
        <field name="res_model">report.sales.target.galon</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
