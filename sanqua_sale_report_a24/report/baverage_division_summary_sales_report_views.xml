<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="baverage_division_summary_sales_report_pivot">
            <field name="name">baverage.division.summary.sales.report.pivot</field>
            <field name="model">report.global.division.summary.sales</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis" disable_linking="True">
                    <!-- <field name="team_id" type="row"/> -->
                    <field name="product_id" type="row"/>
                    <field name="date" interval="day" type="col"/>
                    <field name="qty_realisasi" type="measure"/>
                    <field name="qty_target" type="measure"/>
                    <field name="persentase" type="measure"/>
                    <field name="accumulate" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_baverage_division_summary_sales_report" model="ir.actions.act_window">
            <field name="name">A24 - Baverage Division Summary Sales Report</field>
            <field name="res_model">report.global.division.summary.sales</field>
            <field name="view_mode">pivot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="baverage_division_summary_sales_report_pivot"/>
            <field name="context">{'search_default_current_month':1}</field>
            <field name="domain">[('team_name','in',['BVG','Baverage'])]</field>
        </record>

        <menuitem id="baverage_division_summary_sales_report_menu" name="A24 - Baverage Division Summary Sales Report" action="action_baverage_division_summary_sales_report" parent="sale.menu_sale_report" groups="group_baverage_division_summary_sales_report" sequence="138" />
    </data>
</odoo>