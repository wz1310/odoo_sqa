<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Invoices -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="after">
                    <field name="discount_fixed_line"/>
                    <!-- <field name="discount_fixed_qty" /> -->
                    <field name="discount"/>
                    <field name="multi_discounts" placeholder="55+20+10" invisible="1"/>
                    <field name="display_discount" optional="hide"/>
            	</xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='debit']" position="before">
                    <field name="discount_fixed_line" invisible="1"/>
                    <field name="display_discount" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                    <attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>

    </data>
</odoo>
