<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchases -->
        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="before">
                    <field name="discount" invisible="1"/>
                    <field name="discount_fixed_line"/>
                    <field name="multi_discounts" placeholder="55+20+10" invisible="1"/>
                    <field name="display_discount" invisible="1"/>
                    <field name="total_discount_amount" readonly="1" force_save="1"/>
            	</xpath>
                <field name="amount_untaxed" position="before">
                	<field name="base_price" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                	<field name="total_discount_amount" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                </field>
                <field name="amount_untaxed" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="amount_tax" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="amount_total" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
