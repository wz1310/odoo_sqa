<odoo>
    <record id="inherit_product_template_view_form" model="ir.ui.view">
        <field name="name">inherit.product.template.view.form</field>
        <field name="model">product.template</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']/group/group[@name='bill']" position="after">
                <group name="tolerance">
                    <field name="qty_tolerance"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_view_form" model="ir.ui.view">
        <field name="name">inherit.product.view.form</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']/group/group[@name='bill']" position="after">
                <group name="tolerance">
                    <field name="qty_tolerance"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>