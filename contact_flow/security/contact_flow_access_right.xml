<odoo>
        <record model="ir.rule" id="rule_partner_pricelist_global_user">
            <field name="name">Rule Partner Pricelist Global User</field>
            <field name="model_id" ref="model_partner_pricelist" />
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
            <field name="active" eval="False"/>
        </record>
        
        <!-- module category Contact Field -->
        <record model="ir.module.category" id="module_category_contact_field">
            <field name="name">Contact Field</field>
        </record>

        <record id="group_contact_field_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_contact_field"/>
        </record>
        <record id="group_contact_field_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_contact_field"/>
            <field name="implied_ids" eval="[(4, ref('group_contact_field_user'))]"/>
        </record>

        <!-- module category Change Request -->
        <record model="ir.module.category" id="module_category_change_request">
            <field name="name">Change Request</field>
        </record>

        <record id="group_change_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_change_request"/>
        </record>

        <!-- implied contact to contact creation grup -->
        <record id="base.group_partner_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_contact_field_user'))]"/>
        </record>
        
        <record id="sales_team.group_sale_salesman" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_change_request_user'))]"/>
        </record>
    <data noupdate="0">

        <record model="ir.rule" id="rule_partner_contact_global_user">
            <field name="name">Rule Partner Contact Global User</field>
            <field name="model_id" ref="model_res_partner" />
            <field name="perm_read" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_unlink" eval="True" />
            <field name="domain_force">['|', '|', '|', ('company_id','=',False),('company_id','in',company_ids), ('employee','=',True), ('ref_company_ids','!=',[])]</field>
        </record>
        
        <record model="ir.rule" id="rule_contact_change_request_own">
            <field name="name">Change Request: Own-request Only </field>
            <field name="model_id" ref="contact_flow.model_contact_change_request"/>
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('contact_flow.group_change_request_user'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>

        <record model="ir.rule" id="rule_contact_change_request_user_approver">
            <field name="name">Change Request: User Approver</field>
            <field name="model_id" ref="contact_flow.model_contact_change_request"/>
            <field name="domain_force">[('id','in',user.doc_as_approver('contact.change.request'))]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record model="ir.rule" id="rule_contact_change_request_all">
            <field name="name">Change Request: All Request </field>
            <field name="model_id" ref="contact_flow.model_contact_change_request"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>