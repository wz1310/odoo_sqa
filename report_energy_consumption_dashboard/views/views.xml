<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="report_energy_consumption_dashboard.list">
      <field name="name">report_energy_consumption_dashboard list</field>
      <field name="model">report.energy.consumption.dashboard</field>
      <field name="arch" type="xml">
        <tree create="0" edit="0" delete="0">
            <field name="company_id"/>
            <field name="machine_name"/>
            <field name="date_deadline"/>
            <field name="consumption"/>
            <field name="total_produced"/>
        </tree>
      </field>
    </record>

    <record id="report_energy_consumption_dashboard_pivot" model="ir.ui.view">
      <field name="name">report.energy.consumption.dashboard.pivot</field>
      <field name="model">report.energy.consumption.dashboard</field>
      <field name="arch" type="xml">
        <pivot string="Report Energy Consumption" disable_linking="true">
            <field name="company_id" type="row"/>
            <field name="machine_name" type="row"/>
            <field name="consumption" type="measure"/>    
            <field name="total_produced" type="measure"/>    
        </pivot>
      </field>
    </record>

    <record id="report_energy_consumption_dashboard_search" model="ir.ui.view">
        <field name="name">report.energy.consumption.dashboard.view</field>
        <field name="model">report.energy.consumption.dashboard</field>
        <field name="arch" type="xml">
            <search string="Report Energy Consumption">
                <field name="company_id"/>
                <field name="machine_name"/>
            </search>
        </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="report_energy_consumption_dashboard.action_window">
      <field name="name">report_energy_consumption_dashboard window</field>
      <field name="res_model">report.energy.consumption.dashboard</field>
      <field name="view_mode">pivot</field>
    </record>

