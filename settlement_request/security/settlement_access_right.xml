<odoo>
        <!-- module category Settlement -->
        <record model="ir.module.category" id="module_category_settlement_request">
            <field name="name">Settlement Request</field>
            <field name="parent_id" ref="invoice_collection.module_category_collection_activity"/>
        </record>

        <record id="group_settlement_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_settlement_request"/>
        </record>

        <record id="group_settlement_approver" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="module_category_settlement_request"/>
            <field name="implied_ids" eval="[(4, ref('settlement_request.group_settlement_user'))]"/>
        </record>

		
        
    <data>
        <!-- rule group Approver -->
        <record model="ir.rule" id="rule_settlement_request_group_approver_own">
            <field name="name">Settlement Request: Documents followed by Approver Only </field>
            <field name="model_id" ref="settlement_request.model_settlement_request"/>
            <field name="domain_force">[('id','in',user.doc_as_approver('collection.activity'))]</field>
            <field name="groups" eval="[(4, ref('settlement_request.group_settlement_approver'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <!-- rule group User -->
        <record model="ir.rule" id="rule_settlement_request_group_user_allowed">
            <field name="name">Settlement Request: Allowed-company only </field>
            <field name="model_id" ref="settlement_request.model_settlement_request"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', [x.id for x in user.company_ids])]</field>
            <field name="groups" eval="[(4, ref('settlement_request.group_settlement_user'))]"/> 
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_create" eval="True"/>
        </record>
    </data>
</odoo>