<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_create_rpm_wizard_form" model="ir.ui.view">
            <field name="name">view.create.rpm.wizard.form</field>
            <field name="model">create.rpm</field>
            <field name="arch" type="xml">
                <form string="Create RPM">
                    <p class="oe_grey"> </p>
                    <group>
                        <field name="pbbh_id" readonly="1" force_save="1"/>
                    </group>
        
                    <group>
                        <field name="create_rpm_line_ids" nolabel ="1">
                            <tree editable="botttom" create="0" delete="0">
                                <field name="create_rpm_id" invisible="1"/>
                                <field name="product_id" readonly="1" force_save="1"/>
                                <field name="product_qty" />
                                <field name="product_uom" readonly="1" force_save="1" groups="product.group_uom" class="oe_inline"/>
                                <field name="is_check"/>
                            </tree>
                        </field>
                    </group>
                
                    <footer>
                        <button name="action_create_rpm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_rpm_wizard" model="ir.actions.act_window">
            <field name="name">Create RPM</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.rpm</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>