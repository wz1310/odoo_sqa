<odoo>
    <record id="mrp_rph_view_form" model="ir.ui.view">
        <field name="name">mrp.rph.view.form</field>
        <field name="model">mrp.rph</field>
        <field name="arch" type="xml">
            <form string="Rencana Produksi Harian">
                <header>
                    <!-- <button name="action_view_pbbh" string="Create pbbh" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','approved')]}"/> -->
                    <!-- <button name="action_view_rpm" string="Create RPM" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','waiting_approval')]}"/> -->
                    <button name="button_confirm" type="object" states="draft" string="Confirm" class="oe_highlight" id="confirm"/>
                    <button name="button_approve" type="object" attrs="{'invisible':['|',('user_can_approve','=',False), ('state','not in', ['waiting_approval'])]}" string="Approve" class="oe_highlight" id="approve"/>
                    <button name="open_reject_message_wizard" type="object" attrs="{'invisible':['|',('user_can_approve','=',False), ('state','not in', ['waiting_approval'])]}" string="Reject" class="oe_highlight" id="reject"/>
                    <button name="button_set_draft" type="object" states="reject,cancel" string="Set to Draft" class="oe_highlight" id="set_draft"/>
                    <button name="button_cancel" type="object" states="draft" string="Cancel" class="oe_highlight" id="set_draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval,approved" readonly="1"/>
				</header>
				<sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_tree_pbbh" class="oe_stat_button" icon="fa-file">
                            <field name="rph_count" widget="statinfo" string="PBBH"/>
                            <field name="pbbh_ids" invisible="1"/>
                        </button>
                    </div>
					<div class="oe_title">
						<h1>
							<field name="name" readonly="1" required="1" force_save="1"/>
						</h1>
					</div>
					<group>
						<group>
                            <field name="product_ids" invisible="1"/>
							<field name="product_id" attrs="{'readonly':[('state','in',('reject','approved'))]}" options="{'no_quick_create':True, 'no_create_edit':True, 'no_create': True}" domain="[('id', 'in', product_ids)]"/>
                            <field name="product_tmpl_id" attrs="{'readonly':[('state','in',('reject','approved'))]}" invisible="1"/>
							<field name="rpb_id" attrs="{'readonly':[('state','in',('reject','approved'))]}" domain="[('is_active','=',True)]" options="{'no_quick_create':True, 'no_create_edit':True, 'no_create': True}"/>
                            <field name="bom_id" attrs="{'readonly':[('state','in',('reject','approved'))]}" domain="[('product_tmpl_id', '=', product_tmpl_id)]"/>
                            <field name="production_schedule_id" invisible="1"/>
							<field name="company_id" groups="base.group_multi_company"/>
						</group>
                        <group>
							<field name="create_date_rph" force_save="1"/>
							<field name="total_qty_by_manager" string="Total Qty MPS"/>
						</group>
					</group>
					<notebook>
						<page string="Details">
                            <group name="note_group" col="6">
                                <field name="mrp_rph_line_ids" attrs="{'readonly':[('state','in',('reject','approved'))]}">
                                    <tree editable="bottom" create="0" delete="0">
                                        <field name="date" readonly="1" force_save="1"/>
                                        <field name="hari" readonly="1" force_save="1"/>
                                        <field name="mrp_product_forecast_id" invisible="1"/>
                                        <field name="qty_forecast" readonly="1" force_save="1"/>
                                        <field name="qty"/>
                                        <field name="qty_do" />
                                        <field name="qty_produce" />
                                        <field name="qty_produce_save" />
                                        <field name="mesin"/>
                                    </tree>
                                </field>
                                <group colspan="4">
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="total_qty" string="Total Qty"/>
                                </group>
                                <div class="oe_clear"/>
                            </group>
                            
						</page>
                        <page id="page_approval" string="Approvals">
                            <field name="user_can_approve" invisible="1"/>
                            <field name="approval_ids" readonly="1"/>
                            <group><field name="approved"/></group>

                            <button string="Fetch Matrix" type="object" name="checking_approval_matrix" class="oe_highlight" groups="base.group_system" />
                        </page>
					</notebook>
				</sheet>
                <div class="oe_chatter">
				    <field name="message_follower_ids" widget="mail_followers"/>
				    <field name="activity_ids" widget="mail_activity"/>
				    <field name="message_ids" widget="mail_thread"/>
				</div>
            </form>
        </field>
    </record>

    <record id="mrp_rph_view_tree" model="ir.ui.view">
        <field name="name">mrp.rph.view.tree</field>
        <field name="model">mrp.rph</field>
        <field name="arch" type="xml">
            <tree string="Rencana Produksi Harian">
                <field name="name"/>
                <field name="product_id"/>
                <field name="rpb_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="mrp_rph_action" model="ir.actions.act_window">
        <field name="name">Rencana Produksi Harian</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.rph</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Rencana Produksi Harian.
            </p>
        </field>
    </record>
    
    <menuitem
        id="rph_menu"
        name="Rencana Produksi Harian"
        parent="mrp_mps.mrp_mps_menu_planning"
        action="mrp_rph_action"
        sequence="2"/>



    <record id="mrp_rph_line_view_tree" model="ir.ui.view">
        <field name="name">mrp.rph.line.view.tree</field>
        <field name="model">mrp.rph.line</field>
        <field name="arch" type="xml">
            <tree string="Rencana Produksi Harian Detail">
                <field name="date"/>
                <field name="mrp_rph_id" string="RPH"/>
                <field name="company_id"/>
                <field name="product_id"/>
                <field name="qty_forecast"/>
                <field name="qty"/>
                <field name="qty_do" />
                <field name="qty_produce" />
                <field name="qty_produce_save" />
            </tree>
        </field>
    </record>

    <record id="mrp_rph_line_action" model="ir.actions.act_window">
        <field name="name">Rencana Produksi Harian Detail</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.rph.line</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Rencana Produksi Harian Detail.
            </p>
        </field>
    </record>
    
    <menuitem
        id="rph_menu_detail"
        name="Rencana Produksi Harian Detail"
        parent="mrp_mps.mrp_mps_menu_planning"
        action="mrp_rph_line_action"
        sequence="2"/>
</odoo>