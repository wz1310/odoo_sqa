<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_invoice_asset_wizard" model="ir.ui.view">
            <field name="name">view.invoice.asset.wizard</field>
            <field name="model">invoice.asset.wizard</field>
            <field name="arch" type="xml">
                <form string="Asset Management">
                    <group>
                    <field name="move_id" invisible="1"/>
                    <field name="asset_id" context="{'asset_type': 'purchase', 'default_asset_type': 'purchase'}"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="line_ids" domain="[('move_id','=',move_id),('asset_id','=',False),('product_id','!=',False)]">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="move_name" invisible="1"/>
                                    <field name="product_id" optional="show"/>
                                    <field name="name"/>
                                    <field name="asset_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Confirm" name="confirm" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>
    </data>
</odoo>