<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_view_form_inherit" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='button_draft']" position="after">
                <button string="Post Assets" name="post_asset" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','posted'),('type','!=','in_invoice')]}"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="asset_account_id" attrs="{'invisible':[('parent.type','not in',['in_invoice'])]}" groups="account.group_account_user"/>
                <button string="Update Asset Account" name="btn_update_asset" type="object" 
                class="oe_highlight" attrs="{'invisible':['|',('parent.state','!=','posted'),('parent.type','!=','in_invoice')]}" groups="account.group_account_user"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_asset_form_inherit" model="ir.ui.view">
        <field name="name">view.account.asset.form.inherit</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form" />
        <field name="arch" type="xml">
            <field name="acquisition_date" position="after">
                <field name="asset_model_id" attrs="{'invisible': [('state', '=', 'model')], 'readonly': ['|', ('state','!=','draft'), ('original_move_line_ids', '!=', [])]}"
                domain="[('asset_type', '=', 'purchase'), ('state', '=', 'model')]" options="{'no_quick_create':True,'no_create':True}"/>
            </field>
            <xpath expr="//notebook" position="inside">
                <page name="product" string="Products">
                    <field name="product_ids"/>
                </page>
                <page name="purchase" string="Purchase">
                    <field name="purchase_ids"/>
                </page>
                <page name="purchase_line" string="Purchase Lines">
                    <field name="purchase_line_ids"/>
                </page>
            </xpath>
        </field>
    </record>


    <record id="account_move_line_view_form_update_asset" model="ir.ui.view">
        <field name="name">account.move.line.view.form.update.asset</field>
        <field name="model">account.move.line</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="asset_account_id" options="{'no_quick_create':True,'no_create':True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm" type="object" string="Confirm" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
