<?xml version="1.0"?>
<odoo>
    <data>
        <record id="account_move_due_date_filter_view_form" model="ir.ui.view">
            <field name="name">account.move.due.date.filter.view.form</field>
            <field name="model">account.move.due.date.filter</field>
            <field name="arch" type="xml">
                <form string="Due Date Filter">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="account_move_due_date_filter_view_tree" model="ir.ui.view">
            <field name="name">account.move.due.date.filter.view.tree</field>
            <field name="model">account.move.due.date.filter</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="account_move_due_date_filter_action" model="ir.actions.act_window">
            <field name="name">Due Date Filter</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move.due.date.filter</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="account_move_due_date_filter_view_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new Due Date Filter.
                </p>
            </field>
        </record>
        <menuitem
            id="menu_due_date_fillter"
            name="Due Date Filter"
            action="account_move_due_date_filter_action"
            parent="account.menu_finance_configuration"
            sequence="10"/>
    </data>
</odoo>

