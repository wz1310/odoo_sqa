<odoo>
    
    <record id="group_review_limit_report" model="res.groups">
        <field name="name">Review Limit Report</field>
    </record>

    <record model="ir.rule" id="rule_report_review_limit_global_user">
        <field name="name">Rule Review Limit Global User</field>
        <field name="model_id" ref="model_report_review_limit" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>
</odoo>

