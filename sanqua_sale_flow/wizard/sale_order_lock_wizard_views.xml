<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_lock_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.lock.wizard.view.form</field>
        <field name="model">sale.order.lock.wizard</field>
        <field name="arch" type="xml">
            <form string="Sale Order Lock">
                <sheet>
                    <div class="oe_title">
                        <!-- <label for="agrement_id" class="oe_edit_only"/> -->
                        <h1>
                            <field name="order_ids" invisible="1" widget="many2many_tags"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="line" string="Sale Orders">
                            <field name="line_ids">
                                <tree editable="bottom" delete="0" create="0">
                                    <field name="cancel"/>
                                    <field name="sale_id" />
                                    <field name="sale_team_id" />
                                    <field name="currency_id" invisible="1"/>
                                    <field name="sale_picking_ids" widget="many2many_tags"/>
                                    <field name="sale_amount_total" />
                                    <field name="sale_state" />

                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="btn_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>


    <act_window
        id="action_multi_order_lock_multi_wizard"
        name="Multiple Lock Order"
        res_model="sale.order.lock.wizard"
        binding_model="sale.order"
        binding_views="list"
        view_mode="form"
        target="new"
    />
</odoo>