<odoo>
    <record model="ir.ui.view" id="view_move_form_inherited">
        <field name="name">Sanqua Invoice Form Inherit View</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="team_id" position="replace" />
            <field name="company_id" position="after">
                <field name="team_id" domain="[('state', '=', 'done')]"/>
            </field>
            <field name="invoice_date_due" position="attributes">
                <attribute name="attrs">{'required':[('type','not in',['entry'])]}</attribute>
            </field>
        </field>
    </record>
</odoo>