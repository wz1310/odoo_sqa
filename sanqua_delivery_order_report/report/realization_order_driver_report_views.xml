<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="realization_order_driver_report_tree" model="ir.ui.view">
        <field name="name">report.realization.order.driver.tree</field>
        <field name="model">report.realization.order.driver</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="fleet_vehicle_id"/>
                <field name="fleet_driver_id"/>
                <field name="product_id"/>
                <field name="qty_delivered"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="realization_order_driver_report_pivot" model="ir.ui.view">
         <field name="name">report.realization.order.driver.pivot</field>
         <field name="model">report.realization.order.driver</field>
         <field name="arch" type="xml">
             <pivot string="Realization Order" disable_linking="True">
                <field name="company_id" type="row"/>
                <field name="fleet_vehicle_id" type="row"/>
                <field name="fleet_driver_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="qty_delivered" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="realization_order_driver_report_search" model="ir.ui.view">
        <field name="name">report.realization.order.driver.view</field>
        <field name="model">report.realization.order.driver</field>
        <field name="arch" type="xml">
            <search string="Report Realization Order Driver">
                <field name="fleet_vehicle_id"/>
                <field name="fleet_driver_id"/>
                <field name="product_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_realization_order_driver_report" model="ir.actions.act_window">
        <field name="name">Realization Order Driver Report</field>
        <field name="res_model">report.realization.order.driver</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_realization_order_driver_report"
            name=" Realization Order Driver Report"
            action="action_realization_order_driver_report"
            parent="stock.menu_warehouse_report"
            sequence="112"/>
</odoo>
