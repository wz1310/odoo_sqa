<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="realization_order_report_tree" model="ir.ui.view">
        <field name="name">report.realization.order.tree</field>
        <field name="model">report.realization.order</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="qty_order"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="realization_order_report_pivot" model="ir.ui.view">
         <field name="name">report.realization.order.pivot</field>
         <field name="model">report.realization.order</field>
         <field name="arch" type="xml">
             <pivot string="Realization Order" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="product_id" type="col"/>
                <field name="qty_order" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="realization_order_report_search" model="ir.ui.view">
        <field name="name">report.realization.order.view</field>
        <field name="model">report.realization.order</field>
        <field name="arch" type="xml">
            <search string="Report Realization Order">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_realization_order_report" model="ir.actions.act_window">
        <field name="name">Realization Order Report</field>
        <field name="res_model">report.realization.order</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_realization_order_report"
            name=" Realization Order Report"
            action="action_realization_order_report"
            parent="stock.menu_warehouse_report"
            sequence="112"/>
</odoo>
