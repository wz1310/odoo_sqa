<odoo>
    
    <record id="group_report_realization_order" model="res.groups">
        <field name="name">Realization Order Report</field>
    </record>

    <record id="group_report_realization_order_delivered" model="res.groups">
        <field name="name">Realization Order Delivered Report</field>
    </record>


    <record id="group_report_realization_order_driver" model="res.groups">
        <field name="name">Realization Order Driver Report</field>
    </record>

    <record model="ir.rule" id="rule_report_realization_order_global_user">
        <field name="name">Rule Realization Order Global User</field>
        <field name="model_id" ref="model_report_realization_order" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>

    <record model="ir.rule" id="rule_report_realization_order_delivered_global_user">
        <field name="name">Rule Realization Order Delivered Global User</field>
        <field name="model_id" ref="model_report_realization_order_delivered" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>

    <record model="ir.rule" id="rule_report_realization_order_driver_global_user">
        <field name="name">Rule Realization Order Driver Global User</field>
        <field name="model_id" ref="model_report_realization_order_driver" />
        <field name="perm_read" eval="True" />
        <field name="perm_create" eval="False" />
        <field name="perm_write" eval="False" />
        <field name="perm_unlink" eval="False" />
        <field name="domain_force">['|', ('company_id','=',False),('company_id','in',company_ids)]</field>
    </record>
</odoo>