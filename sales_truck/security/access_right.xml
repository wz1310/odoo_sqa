<odoo>
    <record model="ir.module.category" id="module_sale_order_truck">
        <field name="name">Sale Truck</field>
        <field name="parent_id" ref="base.module_category_sales"/>
    </record>

    <record id="group_sale_truck_inventory_user" model="res.groups">
        <field name="name">Inventory User Truck Sales</field>
        <field name="category_id" ref="module_sale_order_truck"/>
        <field name="comment">Manage Own Sales Truck.</field>
    </record>

    <record id="group_sale_truck_sales" model="res.groups">
        <field name="name">Sales</field>
        <field name="implied_ids" eval="[(5,0)]"/>
        <field name="category_id" ref="module_sale_order_truck"/>
        <field name="comment">Manage Own Sales Truck.</field>
    </record>


    <record id="group_sale_truck_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4, ref('group_sale_truck_sales'))]"/>
        <field name="comment">Manage Sales Truck in Company.</field>
        <field name="category_id" ref="module_sale_order_truck"/>
    </record>
</odoo>