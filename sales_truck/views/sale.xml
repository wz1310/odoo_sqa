<odoo>
    <record model="ir.ui.view" id="sale_order_sale_truck_inherited">
        <field name="name">Sale Order Sale Truck Inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="inside">
                <group name="sale_truck_group">
                    <group string="Sale Truck Informations">
                        <field name="sale_truck_id" options="{'no_quick_create':True,'no_create':True}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='sale_mix_ids']" position="after">
                <field name="sale_truck_mix_ids" options="{'no_quick_create':True,'no_create':True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>