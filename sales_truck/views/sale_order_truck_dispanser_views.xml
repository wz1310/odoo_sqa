<odoo>
    <record id="sale_order_truck_dispanser_view_form" model="ir.ui.view">
        <field name="name">sale.order.truck.dispanser.view.form</field>
        <field name="model">sale.order.truck.dispanser</field>
        <field name="arch" type="xml">
            <form string="Sale Dispanser">
                <sheet>
                    <group>
                        <group>
                            <field name="state" invisible="1"/>
                            <field name='product_id' readonly='1' force_save='1'/>
                            <field name='uom_id' readonly='1' force_save='1'/>
                            <field name='qty' readonly='1' force_save='1'/>
                        </group>
                        <group>
                            <field name='sent_qty' readonly='1' force_save='1'/>
                            <field name='return_qty' readonly='1' force_save='1'/>
                        </group> 
                    </group>
                    <notebook>
                        <page name="orderlines" string="Customer">
                            <field name="truck_dispanser_line_ids" attrs="{'readonly':[('state','not in',['confirmed'])]}">
                                <tree editable="bottom">
                                    <field name='partner_id'/>
<!--                                    <field name='uom_id'/>-->
                                    <field name='qty'/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name='partner_id'/>
<!--                                            <field name='uom_id'/>-->
                                            <field name='qty'/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Confirm" name="confirm" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_truck_dispanser_view_tree" model="ir.ui.view">
        <field name="name">sale.order.truck.dispanser.view.tree</field>
        <field name="model">sale.order.truck.dispanser</field>
        <field name="arch" type="xml">
            <tree string="Sale Dispanser">
                <field name='product_id'/>
                <field name='qty'/>
                <field name='uom_id'/>
                <field name='sent_qty'/>
                <field name='return_qty'/>
            </tree>
        </field>
    </record>

    <record id="sale_order_truck_dispanser_action" model="ir.actions.act_window">
        <field name="name">Sale Dispenser</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.truck.dispanser</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Sale Dispenser.
            </p>
        </field>
    </record>
</odoo>