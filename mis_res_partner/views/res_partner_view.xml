                <xpath expr="//page[@name='contact_competitor']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@id='page_approval']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='evaluasi_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='dispenser']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//page[@name='geo_location']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='owner_file_name']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='owner_image']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='warehouse_file_name']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='warehouse_image']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='document_ids']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_driver', '=', True)]}</attribute>
                </xpath>

            </field>
        </record>

