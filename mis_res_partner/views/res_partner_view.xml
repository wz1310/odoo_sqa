    <record id="custom_partner_pricelist_tree" model="ir.ui.view">
        <field name="name">custom.partner.pricelist.tree</field>
        <field name="model">custom.partner.pricelist</field>
        <field name="arch" type="xml">
            <tree string="Partner Pricelist" editable="bottom">
                <field name="id" optional="hide"/>
                <field name="partner_id" string="Customer"/>
                <field name="team_id" domain="[('state','=','done')]"/>
                <field name="team_member_ids" widget="many2many_tags"/>
                <field name="user_id"/>
                <field name="sales_admin_id" required="1"/>
                <field name="credit_limit" invisible="1"/>
                <field name="current_credit" invisible="1"/>
                <field name="remaining_limit" invisible="1"/>
                <field name="black_list" invisible="1"/>
                <field name="over_due" invisible="1"/>
                <field name="pricelist_id" required="1"/>
                <field name="customer_group" required="1"/>
                <field name="payment_term_id" required="1"/>
            </tree>
        </field>
    </record>

    <record id="custom_partner_pricelist_action" model="ir.actions.act_window">
        <field name="name">Partner Pricelist</field>
        <field name="res_model">custom.partner.pricelist</field>
        <field name="view_id" ref="mis_res_partner.custom_partner_pricelist_tree"/>
    </record>

    <menuitem
            id="menu_custom_partner_pricelist_tree_act"
            name="Partner Pricelist"
            sequence="25"
            action="custom_partner_pricelist_action"
            parent="contacts.res_partner_menu_config"/>
</odoo>