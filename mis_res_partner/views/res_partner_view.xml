<odoo>

    <record model="ir.ui.view" id="mis_rest_partner_form_inherited">
        <field name="name">Mis Res Partner Form Inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_driver"/>
                <field name="sanqua_nik"/>
            </xpath>
            <xpath expr="//form['Contact / Address']//group[@colspan=5]/field[@name='mobile']" position="after">
                <field name="region_group_id"/>
                <field name="region_master_id"/>
                <field name="region_id"/>
                <field name="zip"/>
            </xpath>
            <xpath expr="//form['Contact / Address']//group[@colspan=1]" position="after">
                <group colspan="12">
                <notebook>
                <page string="Division">
                    <button name="btn_add_pricelist" type="object" string="Add Pricelist" class="btn-primary" groups="contact_flow.group_contact_field_manager" invisible="1"/>
                    <field name="partner_pricelist_ids" nolabel="1" mode="tree" context="{'default_partner_id': id}">
                        <tree string="Pricelist Lines" editable="bottom" decoration-danger="black_list=='blacklist'">
                            <field name="team_id" required="1"/>
                            <field name="team_member_ids" invisible="1" widget="many2many_tags"/>
                            <field name="user_id" required="1" domain="[('id','in',team_member_ids)]"/>
                            <field name="sales_admin_id" required="1"/>
                            <field name="credit_limit" invisible="1"/>
                            <field name="current_credit" invisible="1"/>
                            <field name="over_due" invisible="1"/>
                            <field name="remaining_limit" invisible="1"/>
                            <field name="black_list" readonly="1" invisible="1"/>
                            <field name="pricelist_id" invisible="1"/>
                            <button name="set_black_list" type="object" class="oe_highlight" string="Add / Remove Blacklist" groups="partner_credit_limit.group_blacklist" invisible="1"/>
                            <button name="btn_update_pricelist" invisible="1" type="object" string="Update" class="btn-primary" groups="contact_flow.group_contact_field_manager"/>
                        </tree>
                    </field>
                </page>
                        </notebook>
                    </group>
            </xpath>
          </field>
        </record>
    <record id="view_mis_res_partner_filter" model="ir.ui.view">
        <field name="name">mis.res.partner.filter.view</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <filter string="Driver" name="is_driver" domain="[('is_driver','=',True)]"/>
            </xpath>
        </field>
    </record>

        <record id="view_mis_res_partner_driver_form" model="ir.ui.view">
            <field name="name">res.partner.driver.form.inherit</field>
