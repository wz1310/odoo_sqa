<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mrp_production_group_view_tree" model="ir.ui.view">
        <field name="name">mrp.production.group.view.tree</field>
        <field name="model">mrp.production.group</field>
        <field name="arch" type="xml">
            <tree string="Group">
                <field name="company_id"/>
                <field name="name" string='Shift'/>
                <field name="group_leader_id"/>
                
            </tree>
        </field>
    </record>

    <record id="mrp_production_group_view_form" model="ir.ui.view">
        <field name="name">mrp.production.group.view.form</field>
        <field name="model">mrp.production.group</field>
        <field name="arch" type="xml">
            <form string="Group">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                       <field name="company_id" readonly="1"/>
                       <field name="group_leader_id"/>
                       <field name="member_ids" widget='many2many_tags'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mrp_production_group_action" model="ir.actions.act_window">
        <field name="name">Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production.group</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="mrp_production_group_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Group.
            </p>
        </field>
    </record>
    

    <menuitem
        id="mrp_production_group_menu"
        name="Production Group"
        action="mrp_production_group_action"
        sequence="1"
        parent="mrp_planning_manufacturing_order"/>
</odoo>