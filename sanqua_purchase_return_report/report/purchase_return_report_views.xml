<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_return_report_tree" model="ir.ui.view">
        <field name="name">report.purchase.return.tree</field>
        <field name="model">report.purchase.return</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="return_number"/>
                <field name="return_date"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="qty_done"/>
                <field name="product_uom"/>
                <field name="price_unit"/>
                <field name="untaxed_amount"/>
                <field name="tax_amount"/>
                <field name="total_amount"/>
                <field name="amount_change"/>
                <field name="tax_change"/>
                <field name="status"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="purchase_return_report_pivot" model="ir.ui.view">
         <field name="name">report.purchase.return.pivot</field>
         <field name="model">report.purchase.return</field>
         <field name="arch" type="xml">
             <pivot string="List Purchase Return" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="return_date" type="row"/>
                <field name="move_id" type="row"/>
                <field name="return_number" type="row"/>
                <field name="product_id" type="row"/>
                <field name="qty_done" type="measure"/>
                <field name="product_uom" type="measure"/>
                <field name="price_unit" type="measure"/>
                <field name="untaxed_amount" type="measure"/>
                <field name="tax_amount" type="measure"/>
                <field name="total_amount" type="measure"/>
                <field name="amount_change" type="measure"/>
                <field name="tax_change" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="purchase_return_report_search" model="ir.ui.view">
        <field name="name">report.purchase.return.view</field>
        <field name="model">report.purchase.return</field>
        <field name="arch" type="xml">
            <search string="List Purchase Return">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="return_number"/>
            </search>
        </field>
    </record>

    <record id="action_purchase_return_report" model="ir.actions.act_window">
        <field name="name">Purchase Return</field>
        <field name="res_model">report.purchase.return</field>
        <field name="view_mode">pivot</field>
    </record>

    <menuitem id="menu_purchase_return_report"
            name="Purchase Return"
            action="action_purchase_return_report"
            parent="purchase.purchase_report"
            sequence="111"/>
</odoo>
