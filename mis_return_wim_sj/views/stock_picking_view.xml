<odoo>
    <record model="ir.ui.view" id="stock_picking_form_return_inherited">
        <field name="name">Stock Picking Form Retur Inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//header/button[@class='o_btn_validate']" position="after">
                <button string="Repair SJ" type="object" name="btn_repair_sj" confirm="Are you sure to repair this DO?" attrs="{'invisible':[('state','!=','confirmed'),('state','!=','assigned')]}" style="font-color:red; !important" />
            </xpath>
        </field>
    </record>
</odoo>