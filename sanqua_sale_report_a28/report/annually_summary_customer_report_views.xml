<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="annually_summary_customer_report_pivot">
            <field name="name">annually.summary.customer.report.pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis" disable_linking="True">
                     <field name="partner_id" type="row"/>
                     <field name="user_id" type="row"/>
                     <field name="product_id" type="row"/>
                     <field name="order_id" type="measure"/>
                     <field name="qty_delivered" type="measure"/>
                     <field name="untaxed_amount_to_invoice" type="measure"/>
                     <field name="untaxed_amount_invoiced" type="measure"/>
                     <field name="amount_residual" type="measure"/>
                 </pivot>
            </field>
        </record>

        <record id="action_annually_summary_customer_report" model="ir.actions.act_window">
            <field name="name">A28/A29 - Summary Customer Report</field>
            <field name="res_model">sale.report</field>
            <field name="view_mode">pivot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="annually_summary_customer_report_pivot"/>
            <field name="context">{'search_default_Sales': 1, 'time_ranges': {'field': 'date_order', 'range': 'last_365_days'}}</field>
        </record>

        <menuitem
            id="annually_summary_customer_report_menu"
            name="A28/A29 - Summary Customer Report"
            action="action_annually_summary_customer_report"
            parent="sale.menu_sale_report"
            groups="group_annually_summary_customer_report"
            sequence="138"
        />
    </data>
</odoo>