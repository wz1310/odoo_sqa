<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="plant_summary_customer_report_pivot">
            <field name="name">plant.summary.customer.report.pivot</field>
            <field name="model">sale.report</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analysis" disable_linking="True">
                    <field name="company_id" type="row"/>
                    <field name="team_id" type="row"/>
                    <field name="product_id" type="row"/>
                    <field name="date" interval="day" type="col"/>
                    <field name="qty_delivered" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="view_order_product_search_inherit" model="ir.ui.view">
            <field name="name">sale.report.search.view.inherit</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale.view_order_product_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='Quotations']" position="before">    
                    <filter name="current_month" string="Current Month" domain="[
                        ('date', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                        ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                    <separator/>
                </xpath>
            </field>
        </record>

        <record id="action_plant_summary_customer_report" model="ir.actions.act_window">
            <field name="name">A26 - Plant Summary Customer Report</field>
            <field name="res_model">sale.report</field>
            <field name="view_mode">pivot</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="plant_summary_customer_report_pivot"/>
            <field name="context">{'search_default_current_month':1}</field>
        </record>

        <menuitem id="plant_summary_customer_report_menu" name="A26 - Plant Summary Customer Report" action="action_plant_summary_customer_report" parent="sale.menu_sale_report" groups="group_plant_summary_customer_report" sequence="138" />
    </data>
</odoo>