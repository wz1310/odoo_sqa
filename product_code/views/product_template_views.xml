<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_exp_date">
        <field name="name">product.template.form.exp_date</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="exp_date"/>
                <div name="exp_date">
                    <field name="exp_date" class="oe_inline"/>
                    <label for="exp_date" string='Months'/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>