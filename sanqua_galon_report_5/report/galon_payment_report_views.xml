<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="galon_payment_report_tree" model="ir.ui.view">
        <field name="name">report.galon.payment.tree</field>
        <field name="model">report.galon.payment</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="code"/>
                <field name="partner_name"/>
                <field name="partner_id" optional="hide"/>
                <field name="receive_date"/>
                <field name="confirm_date"/>
                <field name="amount_paid"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="galon_payment_report_pivot" model="ir.ui.view">
         <field name="name">report.galon.payment.pivot</field>
         <field name="model">report.galon.payment</field>
         <field name="arch" type="xml">
             <pivot string="Payment Galon Report" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="receive_date" type="row" interval="day"/>
                <field name="confirm_date" type="col" interval="day"/>
                <field name="amount_paid" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="galon_payment_report_search" model="ir.ui.view">
        <field name="name">report.galon.payment.view</field>
        <field name="model">report.galon.payment</field>
        <field name="arch" type="xml">
            <search string="Payment Galon Report">
                <field name="partner_id"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_galon_payment_report" model="ir.actions.act_window">
        <field name="name">Galon Payment Report</field>
        <field name="res_model">report.galon.payment</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_galon_payment_report"
            name="Payment Galon Report"
            action="action_galon_payment_report"
            parent="sanqua_galon_report_1.menu_galon_report"
            sequence="1"/>

    <menuitem id="menu_galon_report"
            name="Payment Galon Reporting"
            parent="sale.sale_menu_root"
            sequence="5"/>
</odoo>
