<odoo>
    
    <record id="group_galon_payment_report" model="res.groups">
        <field name="name">Payment Galon Report</field>
    </record>

    <record model="ir.rule" id="rule_report_galon_payment_global_user">
        <field name="name">Rule Payment Galon Global User</field>
        <field name="model_id" ref="model_report_galon_payment" />
