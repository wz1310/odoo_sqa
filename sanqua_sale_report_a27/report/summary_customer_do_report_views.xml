<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="summary_customer_do_search" model="ir.ui.view">
            <field name="name">summary.customer.do.report.view</field>
            <field name="model">report.summary.customer.do</field>
            <field name="arch" type="xml">
                <search string="Harga Dasar Konsumen">
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="company_id"/>
                    <field name="top"/>
                    <filter name="current_month" string="Current Month" domain="[
                            ('date', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                            ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                    <separator/>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="summary_customer_do_tree_view">
            <field name="name">summary.customer.do.report.tree</field>
            <field name="model">report.summary.customer.do</field>
            <field name="arch" type="xml">
                <tree string="Harga Dasar Konsumen">
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="date"/>
                    <field name="product_uom_qty"/>
                    <field name="price_total"/>
                    <field name="untaxed_amount_invoiced"/>
                    <field name="qty_to_deliver"/>
                    <field name="company_id"/>
                    <field name="top"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="summary_customer_do_pivot">
            <field name="name">summary.customer.do.report.pivot</field>
            <field name="model">report.summary.customer.do</field>
            <field name="arch" type="xml">
                <pivot string="Harga Dasar Konsumen" disable_linking="True">
                    <!-- <field name="top" type="row"/> -->
                    <field name="partner_id" type="row"/>
                    <field name="user_id" type="row"/>
                    <field name="date" type="col" interval="month"/>
                    <field name="product_uom_qty" type="measure"/>
                    <field name="price_total" type="measure"/>
                    <field name="untaxed_amount_invoiced" type="measure"/>
                    <field name="amount_residual" type="measure"/>
                    <field name="qty_to_deliver" type="measure"/>
                 </pivot>
            </field>
        </record>

        <record id="action_summary_customer_do" model="ir.actions.act_window">
            <field name="name">A27 - Summary Customer DO</field>
            <field name="res_model">report.summary.customer.do</field>
            <field name="view_mode">pivot,tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="sanqua_sale_report_a27.summary_customer_do_pivot"/>
            <field name="context">{'search_default_current_month':1}</field>
        </record>

        <menuitem
            id="summary_customer_do_menu"
            name="A27 - Summary Customer DO"
            action="sanqua_sale_report_a27.action_summary_customer_do"
            parent="sale.menu_sale_report"
            groups="sanqua_sale_report_a27.group_summary_customer_do"
            sequence="140"
        />
    </data>
</odoo>