<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="inventory_location_report.InventoryReportClient">
        <div class="o_inventory_report_iframe_wrapper" style="width: 100%; height: 100%; position: relative; background: #fff;">
            <div t-if="state.loading" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center; background: #fff; z-index: 10;">
                <div style="border: 4px solid #f3f3f3; border-top: 4px solid #553C9A; border-radius: 50%; width: 50px; height: 50px; animation: spin 1s linear infinite;"></div>
                <div style="margin-top: 15px; font-family: 'Inter', sans-serif; color: #555; font-size: 16px;">
                    Memuat Laporan Inventaris...
                </div>
                <style>@keyframes spin { 0% { transform: rotate(0deg); } 100% { transform: rotate(360deg); } }</style>
            </div>
            
            <iframe 
                t-att-src="url" 
                style="width: 100%; height: 100%; border: none;"
                t-on-load="onIframeLoad">
            </iframe>
        </div>
    </t>
</templates>