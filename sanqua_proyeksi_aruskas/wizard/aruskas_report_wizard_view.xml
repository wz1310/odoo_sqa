<odoo>

    <record id="aruskas_report_wizard_form" model="ir.ui.view">
        <field name="name">aruskas.report.wizard.form</field>
        <field name="model">aruskas.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group name="criteria">
                    <group>
                        <!-- <field name="date_range_id" invisible="1"/> -->
                        <field name="date_from"/>
                        <!-- <field name="company_id" widget="many2many_tags" required="1"/> -->
                        <!-- <field name="date_to"/> -->
                        <!-- <field name="price" groups="stock.group_stock_manager"/> -->
                    </group>
                    <!-- <group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="location_id"/>
                    </group> -->
                </group>
                <footer>
                    <button name="button_export_html" string="View"
                            type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button name="button_export_pdf" string="Export PDF" type="object"/>
                    or
                    <button name="button_export_xlsx" string="Export XLSX" type="object"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="aruskas_report_action" model="ir.actions.act_window">
        <field name="name">Proyeksi Arus Kas</field>
        <field name="res_model">aruskas.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="aruskas_report_menu"
              action="aruskas_report_action"
              parent="account.menu_finance_reports"
              sequence="30"/>

</odoo>
