<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Report Builder Groups -->
        <record id="group_report_builder_user" model="res.groups">
            <field name="name">Report Builder User</field>
            <field name="category_id" ref="base.module_category_reporting"/>
            <field name="comment">Can create and manage own reports</field>
        </record>
        
        <record id="group_report_builder_manager" model="res.groups">
            <field name="name">Report Builder Manager</field>
            <field name="category_id" ref="base.module_category_reporting"/>
            <field name="implied_ids" eval="[(4, ref('group_report_builder_user'))]"/>
            <field name="comment">Can manage all reports and system configuration</field>
        </record>
        
        <!-- Multi-Company Rules -->
        <record id="report_builder_company_rule" model="ir.rule">
            <field name="name">Report Builder Company Rule</field>
            <field name="model_id" ref="model_report_builder"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_user'))]"/>
        </record>
        
        <!-- User can only see their own reports unless manager -->
        <record id="report_builder_user_rule" model="ir.rule">
            <field name="name">Report Builder User Rule</field>
            <field name="model_id" ref="model_report_builder"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Managers can see all reports -->
        <record id="report_builder_manager_rule" model="ir.rule">
            <field name="name">Report Builder Manager Rule</field>
            <field name="model_id" ref="model_report_builder"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Field Rules -->
        <record id="report_builder_field_company_rule" model="ir.rule">
            <field name="name">Report Builder Field Company Rule</field>
            <field name="model_id" ref="model_report_builder_field"/>
            <field name="domain_force">['|', ('report_id.company_id', '=', False), ('report_id.company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_user'))]"/>
        </record>
        
        <record id="report_builder_field_user_rule" model="ir.rule">
            <field name="name">Report Builder Field User Rule</field>
            <field name="model_id" ref="model_report_builder_field"/>
            <field name="domain_force">[('report_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="report_builder_field_manager_rule" model="ir.rule">
            <field name="name">Report Builder Field Manager Rule</field>
            <field name="model_id" ref="model_report_builder_field"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Related Field Rules -->
        <record id="report_builder_related_field_rule" model="ir.rule">
            <field name="name">Report Builder Related Field Rule</field>
            <field name="model_id" ref="model_report_builder_related_field"/>
            <field name="domain_force">[('parent_field_id.report_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_user'))]"/>
        </record>
        
        <record id="report_builder_related_field_manager_rule" model="ir.rule">
            <field name="name">Report Builder Related Field Manager Rule</field>
            <field name="model_id" ref="model_report_builder_related_field"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_report_builder_manager'))]"/>
        </record>
        
    </data>
</odoo>
