<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Report Builder Field Tree View -->
    <record id="view_report_builder_field_tree" model="ir.ui.view">
        <field name="name">report.builder.field.tree</field>
        <field name="model">report.builder.field</field>
        <field name="arch" type="xml">
            <list string="Report Fields" editable="top" default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="field_id" options="{'no_create': True}"/>
                <field name="field_label"/>
                <field name="field_type" readonly="1"/>
                <field name="visible"/>
                <field name="width"/>
                <field name="alignment"/>
                <field name="aggregation"/>
                <field name="sortable"/>
                <field name="filterable"/>
                <field name="searchable"/>
            </list>
        </field>
    </record>
    
    <!-- Report Builder Field Form View -->
    <record id="view_report_builder_field_form" model="ir.ui.view">
        <field name="name">report.builder.field.form</field>
        <field name="model">report.builder.field</field>
        <field name="arch" type="xml">
            <form string="Report Field Configuration">
                <sheet>
                    <div class="oe_title">
                        <label for="field_label" class="oe_edit_only"/>
                        <h1><field name="field_label" placeholder="Column Label"/></h1>
                    </div>
                    
                    <group>
                        <group string="Field Information">
                            <field name="field_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="field_name" readonly="1"/>
                            <field name="field_description" readonly="1"/>
                            <field name="field_type" readonly="1"/>
                            <field name="field_relation" readonly="1" invisible="not field_relation"/>
                        </group>
                        <group string="Display Settings">
                            <field name="sequence"/>
                            <field name="visible"/>
                            <field name="width"/>
                            <field name="alignment"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Formatting" name="formatting">
                            <group>
                                <group string="Data Processing">
                                    <field name="aggregation"/>
                                    <field name="format_string" placeholder="e.g., %.2f for 2 decimal places"/>
                                </group>
                                <group string="Conditional Formatting">
                                    <field name="conditional_format"/>
                                    <field name="condition_field" invisible="not conditional_format"/>
                                    <field name="condition_operator" invisible="not conditional_format"/>
                                    <field name="condition_value" invisible="not conditional_format"/>
                                    <field name="format_color" widget="color" invisible="not conditional_format"/>
                                    <field name="format_bg_color" widget="color" invisible="not conditional_format"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Behavior" name="behavior">
                            <group>
                                <group string="User Interaction">
                                    <field name="sortable"/>
                                    <field name="filterable"/>
                                    <field name="searchable"/>
                                </group>
                            </group>
                        </page>
                        

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Report Builder Field Action -->
    <record id="action_report_builder_field" model="ir.actions.act_window">
        <field name="name">Report Fields</field>
        <field name="res_model">report.builder.field</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
    
    <!-- Related Field Tree View -->
    <record id="view_report_builder_related_field_tree" model="ir.ui.view">
        <field name="name">report.builder.related.field.tree</field>
        <field name="model">report.builder.related.field</field>
        <field name="arch" type="xml">
            <list string="Related Fields">
                <field name="field_path"/>
                <field name="field_name" readonly="1"/>
                <field name="field_description" readonly="1"/>
                <field name="field_type" readonly="1"/>
                <field name="related_model_name" readonly="1"/>
                <field name="is_relational" readonly="1"/>
            </list>
        </field>
    </record>
    
</odoo>
