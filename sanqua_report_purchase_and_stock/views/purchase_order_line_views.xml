<odoo>
    <record id="purchase_order_line_view_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.view.tree</field>
        <field name="model">purchase.order.line</field>
        <field name='priority'>100</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="order_id"/>
                <field name="partner_id" optional="show"/>
                <field name="date_planned" optional="hide"/>
                <field name="product_id" />
                <field name="name" optional="show"/>
                <field name="account_analytic_id"/>
                <field name="product_qty"/>
                <field name="qty_received"/>
                <field name="qty_invoiced"/>
                <field name="difference_qty" optional="hide"/>
                <field name="product_uom"/>
                <field name="discount_percent_line" groups="purchase.group_purchase_user" optional="show"/>
                <field name="amount_discount" groups="purchase.group_purchase_user" optional="show"/>
                <field name="price_unit" groups="purchase.group_purchase_user"/>
                <field name="display_discount" groups="purchase.group_purchase_user"/>
                <field name="taxes_id" widget="many2many_tags" groups="purchase.group_purchase_user"/>
                <field name="price_subtotal" groups="purchase.group_purchase_user"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="outstanding_po_view_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.view.tree</field>
        <field name="model">purchase.order.line</field>
        <field name='priority'>100</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="order_id"/>
                <field name="partner_id" optional="show"/>
                <field name="no_sj_vendor" optional="show"/>
                <field name="date_planned" optional="hide"/>
                <field name="product_id" />
                <field name="name" optional="show"/>
                <field name="account_analytic_id"/>
                <field name="product_qty"/>
                <field name="qty_received"/>
                <field name="qty_invoiced"/>
                <field name="difference_qty"/>
                <field name="product_uom"/>
                <field name="discount_percent_line" groups="purchase.group_purchase_user" optional="show"/>
                <field name="amount_discount" groups="purchase.group_purchase_user" optional="show"/>
                <field name="price_unit" groups="purchase.group_purchase_user"/>
                <field name="display_discount" groups="purchase.group_purchase_user"/>
                <field name="taxes_id" widget="many2many_tags" groups="purchase.group_purchase_user"/>
                <field name="price_subtotal" groups="purchase.group_purchase_user"/>
                <field name="company_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="purchase_order_line_view_pivot" model="ir.ui.view">
        <field name="name">purchase.order.line.view.pivot</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <pivot string="Pivot" disable_linking="True">
                <field name="partner_id" type="row"/>
                <field name="order_id" type="row"/>
                <field name="product_qty" type="measure"/>
                <field name="price_unit" type="measure"/>
            </pivot>
        </field>
    </record>


    <record id="purchase_order_line_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sanqua_report_purchase_and_stock.outstanding_po_view_tree'), 'sequence':2}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('sanqua_report_purchase_and_stock.purchase_order_line_view_pivot'), 'sequence':3}),
                ]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            </p>
        </field>
    </record>

        <record id="outstanding_po_action" model="ir.actions.act_window">
        <field name="name">Outstanding PO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('sanqua_report_purchase_and_stock.purchase_order_line_view_tree'), 'sequence':2}),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('sanqua_report_purchase_and_stock.purchase_order_line_view_pivot'), 'sequence':3}),
                ]"/>
        <field name="domain">[('difference_qty','>',0.0)]</field>
    </record>
    
    <menuitem id="purchase_order_line_menu"
            name="Purchase Order Line"
            parent="purchase.purchase_report"
            action="purchase_order_line_action"
            sequence="7"/>

    
    <menuitem id="outstanding_po_menu"
            name="Outstanding PO"
            parent="purchase.purchase_report"
            action="outstanding_po_action"
            sequence="7"/>
</odoo>