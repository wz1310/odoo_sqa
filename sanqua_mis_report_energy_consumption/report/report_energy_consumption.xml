<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_energy_consumption_tree" model="ir.ui.view">
        <field name="name">report.energy.consumption.tree</field>
        <field name="model">report.energy.consumption</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="company_id"/>
                <field name="machine_name"/>
                <field name="date_deadline"/>
                <field name="consumption"/>
                <field name="total_produced"/>
            </tree>
        </field>
    </record>

    <record id="report_energy_consumption_pivot" model="ir.ui.view">
         <field name="name">report.energy.consumption.pivot</field>
         <field name="model">report.energy.consumption</field>
         <field name="arch" type="xml">
             <pivot string="Report Energy Consumption" disable_linking="True">
                <field name="machine_name" type="row"/>
                <field name="consumption" type="measure"/>
                <field name="total_produced" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="action_report_energy_consumption" model="ir.actions.act_window">
        <field name="name">Report Energy Consumption</field>
        <field name="res_model">report.energy.consumption</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_report_energy_consumption"
            name="Report Energy Consumption (TEST)"
            action="action_report_energy_consumption"
            parent="mrp.menu_mrp_reporting"
            sequence="11"/>
</odoo>