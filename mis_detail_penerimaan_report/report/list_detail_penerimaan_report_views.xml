<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="list_detail_penerimaan_report_tree" model="ir.ui.view">
        <field name="name">report.detail.penerimaan.tree</field>
        <field name="model">list.detail.penerimaan</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="vendor_id" optional="hide"/>
                <field name="no_sj_vendor" optional="hide"/>
                <field name="receive_date_sj" optional="hide"/>
                <field name="picking_id" optional="hide"/>
                <field name="partner_id" optional="hide"/>
                <field name="origin" optional="hide"/>
                <field name="date_expected"/>
                <field name="creation_date"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="product_id"/>
                <field name="product_uom_qty"/>
                <field name="return_qty"/>
                <field name="qty_done"/>
                <field name="difference_qty"/>
                <field name="product_uom"/>
                <field name="state"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="list_detail_penerimaan_report_pivot" model="ir.ui.view">
         <field name="name">report.detail.penerimaan.pivot</field>
         <field name="model">list.detail.penerimaan</field>
         <field name="arch" type="xml">
             <pivot string="List Detail Penerimaan" disable_linking="True">
                <field name="vendor_id" type="row"/>
                <field name="no_sj_vendor" type="row"/>
                <field name="receive_date_sj" type="row"/>
                <field name="picking_id" type="row"/>
                <field name="company_id"/>
             </pivot>
         </field>
    </record>

    <record id="list_detail_penerimaan_report_search" model="ir.ui.view">
        <field name="name">report.detail.penerimaan.view</field>
        <field name="model">list.detail.penerimaan</field>
        <field name="arch" type="xml">
            <search string="List Detail Penerimaan">
                <field name="receive_date_sj"/>
                <field name="company_id"/>
            </search>
        </field>
    </record>

    <record id="action_list_detail_penerimaan_report" model="ir.actions.act_window">
        <field name="name">List Detail Penerimaan</field>
        <field name="res_model">list.detail.penerimaan</field>
        <field name="view_mode">tree,pivot</field>
    </record>

    <menuitem id="menu_detail_penerimaan_report"
            name="List Detail Penerimaan"
            action="action_list_detail_penerimaan_report"
            parent="stock.menu_warehouse_report"
            sequence="8"/>
</odoo>
